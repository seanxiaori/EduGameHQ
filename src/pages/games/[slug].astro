  function shareGame() {
    if (navigator.share) {
      navigator.share({
        title: document.title,
        url: window.location.href
      });
    } else {
      // Â§çÂà∂ÈìæÊé•Âà∞Ââ™Ë¥¥Êùø
      navigator.clipboard.writeText(window.location.href);
      alert('Game link copied to clipboard!');
