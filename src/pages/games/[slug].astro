        });
        
        console.log('ğŸ® æ¸¸æˆå†…äº¤äº’ç›‘å¬è„šæœ¬å·²æ³¨å…¥');
      `;
      
      iframe.contentDocument!.head.appendChild(script);
      console.log('âœ… æˆåŠŸæ³¨å…¥iframeäº¤äº’ç›‘å¬è„šæœ¬');
    } catch (error: any) {
      console.log('âŒ æ— æ³•æ³¨å…¥iframeè„šæœ¬ (è·¨åŸŸé™åˆ¶):', error.message);
    }
  }

