import BaseLayout from '../layouts/BaseLayout.astro';
import type { Game, GameData } from '../types/game';
import fs from 'fs';
import path from 'path';

const seoData = {
  title: "Trending Educational Games | Most Popular Learning Games",
  description: "Discover the most popular educational games trending now. Play the hottest math, science, coding, and puzzle games loved by students worldwide.",
  keywords: ["trending games", "popular educational games", "hot learning games", "most played games", "trending now", "popular kids games"],
  ogImage: "/images/trending-games-og.jpg"
};

// ‰ªéJSONÊñá‰ª∂ËØªÂèñÊ∏∏ÊàèÊï∞ÊçÆ
const gamesDataPath = path.join(process.cwd(), 'src/data/games/games.json');
let allGamesData: GameData = {};

try {
  const fileContent = fs.readFileSync(gamesDataPath, 'utf-8');
  allGamesData = JSON.parse(fileContent) as GameData;
} catch (error) {
  console.warn('Unable to read games data file');
}

// Ëé∑ÂèñÊâÄÊúâÊ∏∏ÊàèÂπ∂Ê®°ÊãüË∂ãÂäøÊï∞ÊçÆ
const trendingGames = Object.entries(allGamesData)
  .map(([id, game]: [string, Game]) => {
    const popularity = Math.floor(Math.random() * 20000) + 1000;
    return {
      id: id,
      title: game.title,
      description: game.description,
      image: game.screenshots && game.screenshots.length > 0 
        ? `/images/games/details/${game.screenshots[0]}` 
        : `/images/games/${id}.svg`,
      url: `/games/${id}`,
      category: game.category,
      categoryName: game.categoryName,
      ageRange: game.ageRange,
      popularity: popularity,
      playCount: popularity * 10,
      ranking: 0 // Â∞ÜÂú®ÊéíÂ∫èÂêéËÆæÁΩÆ
    };
  })
  .sort((a, b) => b.popularity - a.popularity)
  .slice(0, 12)
  .map((game, index) => ({
    ...game,
    ranking: index + 1
  }));
---

<BaseLayout title={seoData.title} description={seoData.description}>
  <!-- ÂºïÂÖ•Áªü‰∏ÄÁöÑÊ∏∏ÊàèÂç°ÁâáÊ†∑Âºè -->
  <link rel="stylesheet" href="/src/styles/game-card.css">

  <!-- ‰∏ªË¶ÅÂÜÖÂÆπ -->
  <main class="main-content">
    <div class="content-wrapper">
      <!-- È°µÈù¢Â§¥ÈÉ® -->
      <section class="page-header">
        <div class="header-content">
          <div class="header-icon">
            <div class="section-icon trending">
              <i class="fas fa-fire"></i>
            </div>
          </div>
          <div class="header-text">
            <h1 class="page-title">Trending Games</h1>
            <p class="page-description">Discover the hottest educational games right now</p>
          </div>
        </div>
      </section>

      <!-- Ê∏∏ÊàèÂå∫Âüü -->
      <section class="games-section">
        <div class="module-header">
          <div class="module-icon trending-icon">
            <i class="fas fa-fire"></i>
          </div>
          <div class="module-title-group">
            <h2 class="module-title">Trending Games</h2>
            <p class="module-subtitle">The hottest educational games right now</p>
          </div>
        </div>
        
        <div class="games-grid">
          {trendingGames.map((game, index) => {
            // Ê†ºÂºèÂåñ‰∫∫Ê∞îÂÄº
            const formatPopularity = (num) => {
              if (num >= 1000000) return (num / 1000000).toFixed(1) + 'M';
              if (num >= 1000) return (num / 1000).toFixed(1) + 'K';
              return num.toString();
            };
            
            // Á°ÆÂÆöË∂ãÂäøÊ†áÁ≠æ
            let trendingBadge = 'HOT';
            if (game.ranking === 1) trendingBadge = 'FIRE';
            else if (game.ranking <= 3) trendingBadge = 'HOT';
            else if (game.ranking <= 6) trendingBadge = 'TOP';
            else trendingBadge = 'RISING';
            
            return (
              <div class={`game-card animate-fadeInUp`} style={`animation-delay: ${index * 0.1}s`} data-game-id={game.id}>
                <div class="game-image-container">
                  <img src={game.image} alt={game.title} class="game-image" />
                  <div class="game-overlay">
                    <div class="played-badge today">Today</div>
                    <div class="popularity-badge">üî• {formatPopularity(game.popularity)}</div>
                    <button class="play-button" onclick={`window.location.href='${game.url}'`}>
                      <i class="fas fa-play"></i>
                      <span>Play Now</span>
                    </button>
                  </div>
                </div>
                <div class="game-info">
                  <h3 class="game-title">{game.title}</h3>
                  <div class="game-tags">
                    <span class={`category-tag ${game.category.toLowerCase()}`}>{game.category}</span>
                    <span class={`feature-tag ${trendingBadge.toLowerCase()}`}>{trendingBadge}</span>
                  </div>
                </div>
              </div>
            );
          })}
        </div>
      </section>

      <!-- Ë∂ãÂäøÂàÜÊûê -->
      <section class="trend-analysis">
        <div class="module-header">
          <div class="module-icon analytics-icon">
            <i class="fas fa-chart-line"></i>
          </div>
          <div class="module-title-group">
            <h2 class="module-title">Trending Categories</h2>
            <p class="module-subtitle">Popular subjects and learning trends</p>
          </div>
        </div>
        
        <div class="trend-grid">
          <div class="trend-card">
            <div class="trend-icon math">
              <i class="fas fa-calculator"></i>
            </div>
            <div class="trend-content">
              <h3 class="trend-title">Math Games</h3>
              <p class="trend-description">Problem-solving games are trending up 25% this week</p>
            </div>
          </div>
          
          <div class="trend-card">
            <div class="trend-icon science">
