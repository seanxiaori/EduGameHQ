    transform: translateY(-2px) scale(1.02);
    box-shadow: 
      0 12px 32px rgba(251 146 60, 0.4),
      0 6px 16px rgba(251 146 60, 0.3);
  }

  .header-text {
    flex: 1;
  }

  .page-title {
    font-size: 2.5rem;
    font-weight: 800;
    font-family: 'Space Grotesk', sans-serif;
