    min-height: 100vh;
  }

  .content-wrapper {
    max-width: 1400px;
    margin: 0 auto;
    padding: 2rem;
  }

  /* 1. È°µÈù¢Â§¥ÈÉ®Âå∫Âüü */
  .page-header {
    background: linear-gradient(135deg, rgb(255 247 237) 0%, rgb(254 243 199) 50%, rgba(251 146 60, 0.08) 100%);
    border-radius: 20px;
    padding: 2rem;
    margin-bottom: 2.5rem;
    border: 1px solid rgba(251 146 60, 0.15);
    box-shadow: 
      0 8px 32px rgba(251 146 60, 0.08),
      0 2px 8px rgba(0, 0, 0, 0.04);
    position: relative;
    overflow: hidden;
  }

  .page-header::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 1px;
    background: linear-gradient(90deg, transparent 0%, rgba(251 146 60, 0.3) 50%, transparent 100%);
  }

