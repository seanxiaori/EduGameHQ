---
import BaseLayout from '../../layouts/BaseLayout.astro';
import GameCard from '../../components/GameCard.astro';
import type { Game } from '../../types/game';
import { getTranslations, t } from '../../i18n/utils';
import fs from 'fs';
import path from 'path';

// ÂØºÂÖ•Ê†∑ÂºèÊñá‰ª∂
import '../../styles/game-card.css';

// Ëé∑ÂèñÁøªËØëÊï∞ÊçÆ
const translations = await getTranslations('fr');

// ‰ªéJSONÊñá‰ª∂ËØªÂèñÊ∏∏ÊàèÊï∞ÊçÆ
const gamesDataPath = path.join(process.cwd(), 'src/data/games.json');
let allGamesData: Game[] = [];

try {
  const fileContent = fs.readFileSync(gamesDataPath, 'utf-8');
  allGamesData = JSON.parse(fileContent) as Game[];
} catch (error) {
  console.warn('Unable to read games data file:', error);
}

// Á≠õÈÄâÂÜíÈô©Ê∏∏Êàè
const adventureGames = allGamesData.filter(game => game.category === 'adventure');

// ÊåâÈöæÂ∫¶ÂíåÁâπËâ≤ÂàÜÁªÑÊ∏∏Êàè
const featuredGames = adventureGames.filter(game => game.featured);
const easyGames = adventureGames.filter(game => game.difficulty === 'Easy');
const mediumGames = adventureGames.filter(game => game.difficulty === 'Medium');
const hardGames = adventureGames.filter(game => game.difficulty === 'Hard');

// üîß GEO‰ºòÂåñÔºöÁîüÊàêCollectionPageÁªìÊûÑÂåñÊï∞ÊçÆÔºàÂ∏ÆÂä©AIÁêÜËß£ÂàÜÁ±ªÈ°µÈù¢ÂíåÊ∏∏ÊàèÈõÜÂêàÔºâ
const collectionPageData = {
  "@context": "https://schema.org",
  "@type": "CollectionPage",
  "name": "Adventure Games Collection - EduGameHQ",
  "description": "Embark on thrilling adventures! Our collection of adventure games develops problem-solving skills, strategic thinking, and creativity through exciting quests and exploration.",
  "url": "https://www.edugamehq.com/adventure-games",
  "mainEntity": {
    "@type": "ItemList",
    "numberOfItems": adventureGames.length,
    "itemListElement": adventureGames.slice(0, 12).map((game, index) => ({
      "@type": "ListItem",
      "position": index + 1,
      "item": {
        "@type": "Game",
        "name": game.title,
        "description": game.description,
        "url": `https://www.edugamehq.com/games/${game.slug}`,
        "image": game.thumbnailUrl || "/images/logo.svg",
        "genre": "Educational Adventure Game",
        "educationalLevel": game.ageRange,
        "audience": {
          "@type": "EducationalAudience",
          "educationalRole": "student"
        }
      }
    }))
  },
  "about": {
    "@type": "Thing",
    "name": "Adventure Education",
    "description": "Educational games focused on developing problem-solving skills, strategic thinking, and creativity through adventure and exploration"
  },
  "keywords": "adventure games, educational adventure, exploration games, quest games, problem-solving, strategic thinking, creativity"
};
---

<BaseLayout additionalStructuredData={collectionPageData}>
  <main class="main-content">
    <div class="content-wrapper">

      <!-- 1. È°µÈù¢È°∂ÈÉ®Âå∫Âüü -->
      <section class="page-header">
        <div class="header-content">
          <div class="header-icon">
            <div class="section-icon adventure">
              <i class="fas fa-compass"></i>
            </div>
          </div>
          <div class="header-text">
            <h1 class="page-title">{t(translations, 'category_pages.adventure_games.title', 'Adventure Games')}</h1>
            <p class="page-description">
              {t(translations, 'category_pages.adventure_games.description', 'Embark on thrilling adventures! Our collection of adventure games develops problem-solving skills, strategic thinking, and creativity through exciting quests and exploration. From treasure hunts to epic journeys, discover the joy of learning through adventure and discovery.')}
            </p>
          </div>
        </div>
      </section>

      <!-- 2. ÁâπËâ≤Ê∏∏ÊàèÊ®°Âùó -->
      {featuredGames.length > 0 && (
        <section class="game-module featured-module">
          <div class="module-header">
            <div class="module-icon featured-icon">
              <i class="fas fa-star"></i>
            </div>
            <div class="module-title-group">
              <h2 class="module-title">{t(translations, 'category_pages.adventure_games.featured_section.title', 'Featured Adventure Games')}</h2>
              <p class="module-subtitle">{t(translations, 'category_pages.adventure_games.featured_section.description', 'Our most popular and recommended adventure games')}</p>
            </div>
          </div>
          
          <div class="games-grid">
            {featuredGames.slice(0, 6).map((game) => (
              <GameCard game={game} showPlayHistory={true} showPopularity={true} showFavorite={true} />
            ))}
          </div>
        </section>
      )}

      <!-- 3. ÂÆπÊòìÈöæÂ∫¶Ê∏∏ÊàèÊ®°Âùó -->
      {easyGames.length > 0 && (
        <section class="game-module difficulty-module easy-module">
          <div class="module-header">
            <div class="module-icon easy-icon">
              <i class="fas fa-smile"></i>
            </div>
            <div class="module-title-group">
              <h2 class="module-title">{t(translations, 'category_pages.adventure_games.difficulty_levels.easy.title', 'Easy Level Adventures')}</h2>
              <p class="module-subtitle">{t(translations, 'category_pages.adventure_games.difficulty_levels.easy.description', 'Perfect for beginners and young explorers')}</p>
            </div>
          </div>
          
          <div class="games-grid">
            {easyGames.map((game) => (
              <GameCard game={game} showPlayHistory={true} showPopularity={true} showFavorite={true} />
            ))}
          </div>
        </section>
      )}

      <!-- 4. ‰∏≠Á≠âÈöæÂ∫¶Ê∏∏ÊàèÊ®°Âùó -->
      {mediumGames.length > 0 && (
        <section class="game-module difficulty-module medium-module">
          <div class="module-header">
            <div class="module-icon medium-icon">
              <i class="fas fa-meh"></i>
            </div>
            <div class="module-title-group">
              <h2 class="module-title">{t(translations, 'category_pages.adventure_games.difficulty_levels.medium.title', 'Medium Level Adventures')}</h2>
              <p class="module-subtitle">{t(translations, 'category_pages.adventure_games.difficulty_levels.medium.description', 'Challenge yourself with intermediate quests')}</p>
            </div>
          </div>
          
          <div class="games-grid">
            {mediumGames.map((game) => (
              <GameCard game={game} showPlayHistory={true} showPopularity={true} showFavorite={true} />
            ))}
          </div>
        </section>
      )}

      <!-- 5. Âõ∞ÈöæÊ∏∏ÊàèÊ®°Âùó -->
      {hardGames.length > 0 && (
        <section class="game-module difficulty-module hard-module">
          <div class="module-header">
            <div class="module-icon hard-icon">
              <i class="fas fa-frown"></i>
            </div>
            <div class="module-title-group">
              <h2 class="module-title">{t(translations, 'category_pages.adventure_games.difficulty_levels.hard.title', 'Hard Level Adventures')}</h2>
              <p class="module-subtitle">{t(translations, 'category_pages.adventure_games.difficulty_levels.hard.description', 'Advanced challenges for experienced adventurers')}</p>
            </div>
          </div>
          
          <div class="games-grid">
            {hardGames.map((game) => (
              <GameCard game={game} showPlayHistory={true} showPopularity={true} showFavorite={true} />
            ))}
          </div>
        </section>
      )}

      <!-- 6. Â≠¶‰π†Âª∫ËÆÆÊ®°Âùó -->
      <section class="info-module tips-module">
        <div class="module-header">
          <div class="module-icon tips-icon">
            <i class="fas fa-lightbulb"></i>
          </div>
          <div class="module-title-group">
            <h2 class="module-title">{t(translations, 'category_pages.adventure_games.learning_tips.title', 'Adventure Learning Tips')}</h2>
            <p class="module-subtitle">{t(translations, 'category_pages.adventure_games.learning_tips.subtitle', 'Expert advice to improve your adventure skills')}</p>
          </div>
        </div>
        
        <div class="tips-grid">
          <div class="tip-item">
            <div class="tip-icon">
              <i class="fas fa-clock"></i>
            </div>
            <div class="tip-content">
              <h4 class="tip-title">{t(translations, 'category_pages.adventure_games.learning_tips.tips.0.title', 'Explore Daily')}</h4>
              <p class="tip-text">{t(translations, 'category_pages.adventure_games.learning_tips.tips.0.description', 'Spend 15-20 minutes daily exploring new adventures and challenges')}</p>
            </div>
          </div>
          
          <div class="tip-item">
            <div class="tip-icon">
              <i class="fas fa-chart-line"></i>
            </div>
            <div class="tip-content">
              <h4 class="tip-title">{t(translations, 'category_pages.adventure_games.learning_tips.tips.1.title', 'Progress Gradually')}</h4>
              <p class="tip-text">{t(translations, 'category_pages.adventure_games.learning_tips.tips.1.description', 'Start with easier adventures and gradually move to more challenging quests')}</p>
            </div>
          </div>
          
          <div class="tip-item">
            <div class="tip-icon">
              <i class="fas fa-heart"></i>
            </div>
            <div class="tip-content">
              <h4 class="tip-title">{t(translations, 'category_pages.adventure_games.learning_tips.tips.2.title', 'Embrace Challenges')}</h4>
              <p class="tip-text">{t(translations, 'category_pages.adventure_games.learning_tips.tips.2.description', 'Don\'t be afraid to face challenges - they\'re part of the adventure')}</p>
            </div>
          </div>
          
          <div class="tip-item">
            <div class="tip-icon">
              <i class="fas fa-question-circle"></i>
            </div>
            <div class="tip-content">
              <h4 class="tip-title">{t(translations, 'category_pages.adventure_games.learning_tips.tips.3.title', 'Think Strategically')}</h4>
              <p class="tip-text">{t(translations, 'category_pages.adventure_games.learning_tips.tips.3.description', 'Focus on developing strategic thinking and problem-solving skills')}</p>
            </div>
          </div>
        </div>
      </section>

      <!-- 7. Ê†∏ÂøÉÊäÄËÉΩÊ®°Âùó -->
      <section class="info-module skills-module">
        <div class="module-header">
          <div class="module-icon skills-icon">
            <i class="fas fa-brain"></i>
          </div>
          <div class="module-title-group">
            <h2 class="module-title">{t(translations, 'category_pages.adventure_games.core_skills.title', 'Core Skills You\'ll Develop')}</h2>
            <p class="module-subtitle">{t(translations, 'category_pages.adventure_games.core_skills.subtitle', 'Essential adventure abilities gained through gameplay')}</p>
          </div>
        </div>

        <div class="skills-grid">
          <div class="skill-item">
            <div class="skill-icon">
              <i class="fas fa-puzzle-piece"></i>
            </div>
            <div class="skill-content">
              <h4 class="skill-title">{t(translations, 'category_pages.adventure_games.core_skills.skills.0.title', 'Problem Solving')}</h4>
              <p class="skill-description">{t(translations, 'category_pages.adventure_games.core_skills.skills.0.description', 'Develop critical thinking abilities')}</p>
            </div>
          </div>

          <div class="skill-item">
            <div class="skill-icon">
              <i class="fas fa-compass"></i>
            </div>
            <div class="skill-content">
              <h4 class="skill-title">{t(translations, 'category_pages.adventure_games.core_skills.skills.1.title', 'Exploration')}</h4>
              <p class="skill-description">{t(translations, 'category_pages.adventure_games.core_skills.skills.1.description', 'Learn navigation and discovery')}</p>
            </div>
          </div>

          <div class="skill-item">
            <div class="skill-icon">
              <i class="fas fa-book"></i>
            </div>
            <div class="skill-content">
              <h4 class="skill-title">{t(translations, 'category_pages.adventure_games.core_skills.skills.2.title', 'Story Understanding')}</h4>
              <p class="skill-description">{t(translations, 'category_pages.adventure_games.core_skills.skills.2.description', 'Understand narratives and character development')}</p>
            </div>
          </div>

          <div class="skill-item">
            <div class="skill-icon">
              <i class="fas fa-shield-alt"></i>
            </div>
            <div class="skill-content">
              <h4 class="skill-title">{t(translations, 'category_pages.adventure_games.core_skills.skills.3.title', 'Decision Making')}</h4>
              <p class="skill-description">{t(translations, 'category_pages.adventure_games.core_skills.skills.3.description', 'Practice making choices and understanding consequences')}</p>
            </div>
          </div>

          <div class="skill-item">
            <div class="skill-icon">
              <i class="fas fa-box"></i>
            </div>
            <div class="skill-content">
              <h4 class="skill-title">{t(translations, 'category_pages.adventure_games.core_skills.skills.4.title', 'Resource Management')}</h4>
              <p class="skill-description">{t(translations, 'category_pages.adventure_games.core_skills.skills.4.description', 'Learn to manage items and plan strategically')}</p>
            </div>
          </div>
          
          <div class="skill-item">
            <div class="skill-icon">
              <i class="fas fa-lightbulb"></i>
            </div>
            <div class="skill-content">
              <h4 class="skill-title">{t(translations, 'category_pages.adventure_games.core_skills.skills.5.title', 'Creative Thinking')}</h4>
              <p class="skill-description">{t(translations, 'category_pages.adventure_games.core_skills.skills.5.description', 'Develop innovative problem-solving approaches')}</p>
            </div>
          </div>
        </div>
      </section>

    </div>
  </main>
</BaseLayout>

<style>
  /* ‰∏ªË¶ÅÂÜÖÂÆπÂå∫Âüü */
