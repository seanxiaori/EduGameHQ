---
import BaseLayout from '../layouts/BaseLayout.astro';

const seoData = {
  title: "About EduGameHQ | Educational Gaming Platform",
  description: "Learn about EduGameHQ's mission to make learning fun through educational games. Discover our story, values, and commitment to quality education.",
  keywords: ["about edugamehq", "educational platform", "learning games mission", "educational technology"],
  ogImage: "/images/about-og.jpg"
};

// 团队成员数据
const teamMembers = [
  {
    name: "Dr. Sarah Chen",
    role: "Educational Director",
    description: "Former Stanford professor with 15+ years in educational technology",
    icon: "fas fa-user-graduate"
  },
  {
    name: "Mike Rodriguez",
    role: "Game Developer",
    description: "Award-winning game designer specializing in educational content",
    icon: "fas fa-gamepad"
  },
  {
    name: "Lisa Wang",
    role: "Child Psychologist",
    description: "Expert in child development and learning psychology",
    icon: "fas fa-brain"
  },
  {
    name: "Alex Thompson",
    role: "Technology Lead",
    description: "Full-stack developer passionate about accessible education",
    icon: "fas fa-code"
  }
];

// 统计数据
const stats = [
  { number: "100+", label: "Educational Games", icon: "fas fa-gamepad" },
  { number: "50K+", label: "Active Students", icon: "fas fa-users" },
  { number: "15+", label: "Countries Served", icon: "fas fa-globe" },
  { number: "100%", label: "Free Content", icon: "fas fa-heart" }
];

// 价值主张
const values = [
  {
    title: "Quality First",
    description: "Every game is carefully curated and tested by education experts",
    icon: "fas fa-star"
  },
  {
    title: "Always Free",
    description: "Education should be accessible to everyone, everywhere",
    icon: "fas fa-gift"
  },
  {
    title: "Safe Environment",
    description: "Child-friendly content with strict safety and privacy standards",
    icon: "fas fa-shield-alt"
  },
  {
    title: "Global Reach",
    description: "Supporting learners worldwide with multilingual content",
    icon: "fas fa-world"
  }
];
---

<BaseLayout {...seoData}>
  <div class="about-page">
    <!-- 英雄区域 -->
    <section class="hero-section">
      <div class="container-custom">
        <div class="hero-content">
          <h1 class="hero-title">About EduGameHQ</h1>
          <p class="hero-subtitle">
            Where Learning Meets Fun - Transforming Education Through Interactive Gaming
          </p>
          <div class="hero-description">
            <p>
              EduGameHQ is the world's leading platform for free educational games, 
              designed to make learning engaging, effective, and accessible for students aged 6-18.
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- 统计数据 -->
    <section class="stats-section">
      <div class="container-custom">
        <div class="stats-grid">
          {stats.map((stat) => (
            <div class="stat-card">
              <div class="stat-icon">
                <i class={stat.icon}></i>
              </div>
              <div class="stat-number">{stat.number}</div>
              <div class="stat-label">{stat.label}</div>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- 使命愿景 -->
    <section class="mission-section">
      <div class="container-custom">
        <div class="mission-content">
          <div class="mission-text">
            <h2 class="section-title">Our Mission</h2>
            <p class="mission-description">
              To democratize quality education by providing free, engaging, and effective 
              educational games that inspire curiosity, foster creativity, and build 
              essential skills for the 21st century.
            </p>
            
            <h3 class="subsection-title">Our Vision</h3>
            <p class="vision-description">
              A world where every child has access to high-quality educational content 
              that makes learning joyful, meaningful, and transformative.
            </p>
          </div>
          
          <div class="mission-visual">
            <div class="mission-icon">
              <i class="fas fa-graduation-cap"></i>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- 价值主张 -->
    <section class="values-section">
      <div class="container-custom">
        <h2 class="section-title text-center">Our Core Values</h2>
        <div class="values-grid">
          {values.map((value) => (
            <div class="value-card">
              <div class="value-icon">
                <i class={value.icon}></i>
              </div>
              <h3 class="value-title">{value.title}</h3>
              <p class="value-description">{value.description}</p>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- 我们的故事 -->
    <section class="story-section">
      <div class="container-custom">
        <div class="story-content">
          <h2 class="section-title">Our Story</h2>
          <div class="story-text">
            <p>
              EduGameHQ was born from a simple observation: children learn best when they're having fun. 
              Founded in 2023 by a team of educators, game developers, and child psychologists, 
              we set out to bridge the gap between entertainment and education.
            </p>
            
            <p>
              What started as a small collection of math games has grown into a comprehensive 
              platform serving over 50,000 students worldwide. Our games cover mathematics, 
              science, coding, language arts, and critical thinking skills.
            </p>
            
            <p>
              Today, EduGameHQ continues to evolve, always guided by our core belief that 
              quality education should be free, accessible, and enjoyable for every child.
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- 团队介绍 -->
    <section class="team-section">
      <div class="container-custom">
        <h2 class="section-title text-center">Meet Our Team</h2>
        <p class="team-intro">
          Our diverse team of educators, developers, and researchers work together 
          to create the best possible learning experience for students worldwide.
        </p>
        
        <div class="team-grid">
          {teamMembers.map((member) => (
            <div class="team-card">
              <div class="team-avatar">
                <i class={member.icon}></i>
              </div>
              <h3 class="team-name">{member.name}</h3>
              <div class="team-role">{member.role}</div>
              <p class="team-description">{member.description}</p>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- 联系我们 -->
    <section class="contact-section">
      <div class="container-custom">
        <div class="contact-content">
          <h2 class="section-title text-center">Get In Touch</h2>
          <p class="contact-description">
            Have questions, suggestions, or want to partner with us? 
            We'd love to hear from you!
          </p>
          
          <div class="contact-info">
            <div class="contact-item">
              <i class="fas fa-envelope"></i>
              <span>hello@edugamehq.com</span>
            </div>
            <div class="contact-item">
              <i class="fas fa-globe"></i>
              <span>www.edugamehq.com</span>
            </div>
          </div>
          
          <div class="social-links">
            <a href="#" class="social-link">
              <i class="fab fa-twitter"></i>
            </a>
            <a href="#" class="social-link">
              <i class="fab fa-facebook"></i>
            </a>
            <a href="#" class="social-link">
              <i class="fab fa-youtube"></i>
            </a>
            <a href="#" class="social-link">
              <i class="fab fa-linkedin"></i>
            </a>
          </div>
        </div>
      </div>
    </section>
  </div>
</BaseLayout>

<style>
  .about-page {
    background: #FEFCFB;
  }

  .container-custom {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  /* 英雄区域 */
  .hero-section {
    background: linear-gradient(135deg, #EFF6FF 0%, #DBEAFE 50%, #3B82F6 100%);
    padding: 4rem 0;
    text-align: center;
  }

  .hero-title {
    font-size: 3.5rem;
    font-weight: 800;
    color: #1F2937;
    margin-bottom: 1rem;
    font-family: 'Space Grotesk', sans-serif;
  }

  .hero-subtitle {
    font-size: 1.5rem;
    color: #4B5563;
    margin-bottom: 2rem;
    font-weight: 600;
  }

  .hero-description {
    max-width: 600px;
    margin: 0 auto;
  }

  .hero-description p {
    font-size: 1.125rem;
    color: #6B7280;
    line-height: 1.7;
  }

  /* 统计数据 */
  .stats-section {
    padding: 4rem 0;
    background: white;
  }

  .stats-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 2rem;
  }

  .stat-card {
    text-align: center;
    padding: 2rem;
    border-radius: 1rem;
    background: #F8F9FA;
    transition: transform 0.3s ease;
  }

  .stat-card:hover {
    transform: translateY(-4px);
  }

  .stat-icon {
    width: 60px;
    height: 60px;
    background: linear-gradient(135deg, #4F46E5, #F59E0B);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto 1rem;
    color: white;
    font-size: 1.5rem;
  }

  .stat-number {
    font-size: 2.5rem;
    font-weight: 800;
    color: #1F2937;
    margin-bottom: 0.5rem;
    font-family: 'Space Grotesk', sans-serif;
  }

  .stat-label {
    color: #6B7280;
    font-weight: 500;
  }

  /* 使命愿景 */
  .mission-section {
    padding: 4rem 0;
    background: #FEFCFB;
  }

  .mission-content {
    display: grid;
    grid-template-columns: 2fr 1fr;
    gap: 4rem;
    align-items: center;
  }

  .section-title {
    font-size: 2.5rem;
    font-weight: 700;
    color: #1F2937;
    margin-bottom: 1.5rem;
    font-family: 'Space Grotesk', sans-serif;
  }

  .section-title.text-center {
    text-align: center;
    margin-bottom: 3rem;
  }

  .mission-description {
    font-size: 1.125rem;
    color: #4B5563;
    line-height: 1.7;
    margin-bottom: 2rem;
  }

  .subsection-title {
    font-size: 1.5rem;
    font-weight: 600;
    color: #1F2937;
    margin-bottom: 1rem;
  }

  .vision-description {
    font-size: 1.125rem;
    color: #4B5563;
    line-height: 1.7;
  }

  .mission-visual {
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .mission-icon {
    width: 200px;
    height: 200px;
    background: linear-gradient(135deg, #4F46E5, #F59E0B);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-size: 4rem;
    box-shadow: 0 20px 40px rgba(79, 70, 229, 0.3);
  }

  /* 价值主张 */
  .values-section {
    padding: 4rem 0;
    background: white;
  }

  .values-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
  }

  .value-card {
    text-align: center;
    padding: 2rem;
    border-radius: 1rem;
    background: #FEFCFB;
    border: 1px solid #E5E7EB;
    transition: all 0.3s ease;
  }

  .value-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
  }

  .value-icon {
    width: 60px;
    height: 60px;
    background: linear-gradient(135deg, #10B981, #34D399);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto 1rem;
    color: white;
    font-size: 1.5rem;
  }

  .value-title {
    font-size: 1.25rem;
    font-weight: 600;
    color: #1F2937;
    margin-bottom: 1rem;
  }

  .value-description {
    color: #6B7280;
    line-height: 1.6;
  }

  /* 我们的故事 */
  .story-section {
    padding: 4rem 0;
    background: #F8F9FA;
  }

  .story-text p {
    font-size: 1.125rem;
    color: #4B5563;
    line-height: 1.7;
    margin-bottom: 1.5rem;
  }

  /* 团队介绍 */
  .team-section {
    padding: 4rem 0;
    background: white;
  }

  .team-intro {
    text-align: center;
    font-size: 1.125rem;
    color: #6B7280;
    margin-bottom: 3rem;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
  }

  .team-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
  }

  .team-card {
    text-align: center;
    padding: 2rem;
    border-radius: 1rem;
    background: #FEFCFB;
    border: 1px solid #E5E7EB;
    transition: all 0.3s ease;
  }

  .team-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
  }

  .team-avatar {
    width: 80px;
    height: 80px;
    background: linear-gradient(135deg, #7C3AED, #A855F7);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto 1rem;
    color: white;
    font-size: 2rem;
  }

  .team-name {
    font-size: 1.25rem;
    font-weight: 600;
    color: #1F2937;
    margin-bottom: 0.5rem;
  }

  .team-role {
    color: #7C3AED;
    font-weight: 500;
    margin-bottom: 1rem;
  }

  .team-description {
    color: #6B7280;
    line-height: 1.6;
    font-size: 0.9rem;
  }

  /* 联系我们 */
  .contact-section {
    padding: 4rem 0;
    background: linear-gradient(135deg, #1F2937, #374151);
    color: white;
  }

  .contact-content {
    text-align: center;
  }

  .contact-section .section-title {
    color: white;
  }

  .contact-description {
    font-size: 1.125rem;
    color: #D1D5DB;
    margin-bottom: 2rem;
    max-width: 500px;
    margin-left: auto;
    margin-right: auto;
  }

  .contact-info {
    display: flex;
    justify-content: center;
    gap: 2rem;
    margin-bottom: 2rem;
  }

  .contact-item {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    color: #D1D5DB;
  }

  .contact-item i {
    color: #F59E0B;
  }

  .social-links {
    display: flex;
    justify-content: center;
    gap: 1rem;
  }

  .social-link {
    width: 50px;
    height: 50px;
    background: rgba(255, 255, 255, 0.1);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    text-decoration: none;
    transition: all 0.3s ease;
  }

  .social-link:hover {
    background: #F59E0B;
    transform: translateY(-2px);
  }

  /* 响应式设计 */
  @media (max-width: 768px) {
    .hero-title {
      font-size: 2.5rem;
    }

    .hero-subtitle {
      font-size: 1.25rem;
    }

    .mission-content {
      grid-template-columns: 1fr;
      gap: 2rem;
    }

    .mission-icon {
      width: 150px;
      height: 150px;
      font-size: 3rem;
    }

    .section-title {
      font-size: 2rem;
    }

    .contact-info {
      flex-direction: column;
      gap: 1rem;
    }

    .container-custom {
      padding: 0 1rem;
    }
  }
</style> 

