      background: linear-gradient(135deg, #8B5CF6 0%, #7C3AED 100%);
    }

    .module-title-group {
      flex: 1;
    }

    .module-title {
    font-family: 'Space Grotesk', sans-serif;
      font-size: 1.5rem;
      font-weight: 700;
      color: #1F2937;
      margin: 0 0 0.25rem 0;
    line-height: 1.3;
    }

    .module-subtitle {
    color: #6B7280;
      font-size: 0.9rem;
      margin: 0;
    line-height: 1.4;
    }

  /* 学习建议模块 */
  .tips-grid {
      display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 1rem;
    }

  .tip-item {
