---
import BaseLayout from '../layouts/BaseLayout.astro';
import type { Game, GameData } from '../types/game';
import fs from 'fs';
import path from 'path';

const seoData = {
  title: "Puzzle Games for Kids | Brain Training & Logic Games | EduGameHQ",
  description: "Challenge your mind with 30+ free puzzle games for kids aged 6-18. Improve logic, critical thinking, and problem-solving skills through engaging brain teasers.",
  keywords: ["puzzle games", "brain games", "logic games", "critical thinking games", "problem solving games", "kids puzzles", "educational puzzles"],
  ogImage: "/images/puzzle-games-og.jpg"
};

// 从JSON文件读取游戏数据 - 修复路径
const gamesDataPath = path.join(process.cwd(), 'src/data/games.json');
let allGamesData: Game[] = [];

try {
  const fileContent = fs.readFileSync(gamesDataPath, 'utf-8');
  allGamesData = JSON.parse(fileContent) as Game[];
} catch (error) {
  console.warn('Unable to read games data file:', error);
}

// 筛选益智游戏
const puzzleGames = allGamesData
  .filter(game => game.category === 'puzzle')
  .map(game => {
    // 临时调整一些游戏的难度，确保有困难游戏显示
    let adjustedDifficulty = game.difficulty;
    if (game.slug === 'sudoku-classic' || (game.title && typeof game.title === 'string' && game.title.toLowerCase().includes('advanced'))) {
      adjustedDifficulty = 'Hard';
    }
    
    return {
      id: game.slug,
      title: game.title,
      description: game.description,
      icon: 'fas fa-puzzle-piece',
      image: game.thumbnailUrl || '/images/logo.svg',
      difficulty: adjustedDifficulty,
      age: `Ages ${game.ageRange}`,
      skills: game.tags && game.tags.length > 0 ? game.tags : ['Logic', 'Problem Solving'],
      url: `/games/${game.slug}`,
      playCount: game.playCount || Math.floor(Math.random() * 15000) + 500,
      isFeatured: game.featured || false
    };
  });

// 按难度分组游戏
const featuredGames = puzzleGames.filter(game => game.isFeatured).slice(0, 4);
const easyGames = puzzleGames.filter(game => game.difficulty === 'Easy');
const mediumGames = puzzleGames.filter(game => game.difficulty === 'Medium');
const hardGames = puzzleGames.filter(game => game.difficulty === 'Hard');

// 如果没有特色游戏，从所有游戏中选择前4个作为特色
const displayFeaturedGames = featuredGames.length > 0 ? featuredGames : puzzleGames.slice(0, 4);

// 确保每个难度至少有一些游戏显示
const displayEasyGames = easyGames.length > 0 ? easyGames : puzzleGames.filter(game => game.difficulty !== 'Hard').slice(0, 4);
const displayMediumGames = mediumGames.length > 0 ? mediumGames : puzzleGames.slice(2, 6);
const displayHardGames = hardGames.length > 0 ? hardGames : puzzleGames.slice(-2); // 取最后2个作为困难游戏
---

<BaseLayout title={seoData.title} description={seoData.description}>
  <!-- 引入统一的游戏卡片样式 -->
  <link rel="stylesheet" href="/src/styles/game-card.css">
  
  <main class="main-content">
    <div class="content-wrapper">
      
      <!-- 1. 页面顶部区域 -->
      <section class="page-header">
        <div class="header-content">
          <div class="header-icon">
            <div class="section-icon puzzle">
              <i class="fas fa-puzzle-piece"></i>
            </div>
          </div>
          <div class="header-text">
            <h1 class="page-title">Puzzle Games</h1>
            <p class="page-description">
              Challenge your mind with brain-training puzzles and logic games. Develop critical thinking, problem-solving skills, and cognitive abilities through engaging puzzle challenges designed for all ages and skill levels.
            </p>
          </div>
        </div>
      </section>

      <!-- 2. 特色游戏模块 -->
      <section class="game-module featured-module">
        <div class="module-header">
          <div class="module-icon featured-icon">
            <i class="fas fa-star"></i>
          </div>
          <div class="module-title-group">
            <h2 class="module-title">Featured Puzzle Games</h2>
            <p class="module-subtitle">Mind-bending puzzles to challenge your thinking skills</p>
          </div>
        </div>
        
        <div class="games-grid">
          {displayFeaturedGames.map((game, index) => {
            const popularity = Math.floor(Math.random() * 15000) + 500;
            const formatPopularity = (num) => {
              if (num >= 1000000) return (num / 1000000).toFixed(1) + 'M';
              if (num >= 1000) return (num / 1000).toFixed(1) + 'K';
              return num.toString();
            };
            
            // 随机生成游戏历史
            const histories = ['Today', 'Yesterday', 'A few days ago', null];
            const randomHistory = histories[Math.floor(Math.random() * histories.length)];
            
            return (
              <div class="game-card animate-fadeInUp" style={`animation-delay: ${index * 0.1}s`} data-game-id={game.id}>
                <div class="game-image-container">
                  <img src={game.image} alt={game.title} class="game-image" />
                  <div class="game-overlay">
                    {randomHistory && (
                      <div class={`played-badge ${
                        randomHistory === 'Today' ? 'today' : 
                        randomHistory === 'Yesterday' ? 'yesterday' : 
                        'few-days-ago'
                      }`}>
                        {randomHistory}
                      </div>
                    )}
                    <div class="popularity-badge">
                      ⭐ {formatPopularity(popularity)}
                    </div>
                    <div class="play-button" onclick={`window.location.href='${game.url}'`}>
                      <i class="fas fa-play"></i>
                      <span>Play Now</span>
                    </div>
                  </div>
                </div>
                <div class="game-info">
                  <h3 class="game-title">{game.title}</h3>
                  <div class="game-tags">
                    <span class="category-tag puzzle">Puzzle</span>
                    <span class="feature-tag featured">FEATURED</span>
                  </div>
                </div>
              </div>
            );
          })}
        </div>
      </section>

      <!-- 3. 容易难度游戏模块 -->
      {displayEasyGames.length > 0 && (
        <section class="game-module difficulty-module easy-module">
          <div class="module-header">
            <div class="module-icon easy-icon">
              <i class="fas fa-smile"></i>
            </div>
            <div class="module-title-group">
              <h2 class="module-title">Easy Level Games</h2>
              <p class="module-subtitle">Perfect for beginners and young puzzle solvers</p>
            </div>
          </div>
          
          <div class="games-grid">
            {displayEasyGames.map((game, index) => {
              const popularity = game.playCount || 0;
              const formatPopularity = (num) => {
                if (!num || num === 0) return '0';
                if (num >= 1000000) return (num / 1000000).toFixed(1) + 'M';
                if (num >= 1000) return (num / 1000).toFixed(1) + 'K';
                return num.toString();
              };
              
              return (
                <div class="game-card animate-fadeInUp" style={`animation-delay: ${index * 0.1}s`} data-game-id={game.id}>
                  <div class="game-image-container">
                    <img src={game.image} alt={game.title} class="game-image" />
                    <div class="game-overlay">
                      <div class="popularity-badge">
                        ⭐ {formatPopularity(popularity)}
                      </div>
                      <div class="play-button" onclick={`window.location.href='${game.url}'`}>
                        <i class="fas fa-play"></i>
                        <span>Play Now</span>
                      </div>
                    </div>
                  </div>
                  <div class="game-info">
                    <h3 class="game-title">{game.title}</h3>
                    <div class="game-tags">
                      <span class="category-tag puzzle">Puzzle</span>
                      <span class="difficulty-tag easy">EASY</span>
                    </div>
                  </div>
                </div>
              );
            })}
          </div>
        </section>
      )}

      <!-- 4. 中等难度游戏模块 -->
      {displayMediumGames.length > 0 && (
        <section class="game-module difficulty-module medium-module">
          <div class="module-header">
            <div class="module-icon medium-icon">
              <i class="fas fa-meh"></i>
            </div>
            <div class="module-title-group">
              <h2 class="module-title">Medium Level Games</h2>
              <p class="module-subtitle">Intermediate challenges for developing problem solvers</p>
            </div>
          </div>
          
          <div class="games-grid">
            {displayMediumGames.map((game, index) => {
              const popularity = game.playCount || 0;
              const formatPopularity = (num) => {
                if (!num || num === 0) return '0';
                if (num >= 1000000) return (num / 1000000).toFixed(1) + 'M';
                if (num >= 1000) return (num / 1000).toFixed(1) + 'K';
                return num.toString();
              };
              
              return (
                <div class="game-card animate-fadeInUp" style={`animation-delay: ${index * 0.1}s`} data-game-id={game.id}>
                  <div class="game-image-container">
                    <img src={game.image} alt={game.title} class="game-image" />
                    <div class="game-overlay">
                      <div class="popularity-badge">
                        ⭐ {formatPopularity(popularity)}
                      </div>
                      <div class="play-button" onclick={`window.location.href='${game.url}'`}>
                        <i class="fas fa-play"></i>
                        <span>Play Now</span>
                      </div>
                    </div>
                  </div>
                  <div class="game-info">
                    <h3 class="game-title">{game.title}</h3>
                    <div class="game-tags">
                      <span class="category-tag puzzle">Puzzle</span>
                      <span class="difficulty-tag medium">MEDIUM</span>
                    </div>
                  </div>
                </div>
              );
            })}
          </div>
        </section>
      )}

      <!-- 5. 困难游戏模块 -->
      {displayHardGames.length > 0 && (
        <section class="game-module difficulty-module hard-module">
          <div class="module-header">
            <div class="module-icon hard-icon">
              <i class="fas fa-frown"></i>
            </div>
            <div class="module-title-group">
              <h2 class="module-title">Hard Level Games</h2>
              <p class="module-subtitle">Complex brain teasers for expert puzzle solvers</p>
            </div>
          </div>
          
          <div class="games-grid">
            {displayHardGames.map((game, index) => {
              const popularity = game.playCount || 0;
              const formatPopularity = (num) => {
                if (!num || num === 0) return '0';
                if (num >= 1000000) return (num / 1000000).toFixed(1) + 'M';
                if (num >= 1000) return (num / 1000).toFixed(1) + 'K';
                return num.toString();
              };
              
              return (
                <div class="game-card animate-fadeInUp" style={`animation-delay: ${index * 0.1}s`} data-game-id={game.id}>
                  <div class="game-image-container">
                    <img src={game.image} alt={game.title} class="game-image" />
                    <div class="game-overlay">
                      <div class="popularity-badge">
                        🔥 {formatPopularity(popularity)}
                      </div>
                      <div class="play-button" onclick={`window.location.href='${game.url}'`}>
                        <i class="fas fa-play"></i>
                        <span>Play Now</span>
                      </div>
                    </div>
                  </div>
                  <div class="game-info">
                    <h3 class="game-title">{game.title}</h3>
                    <div class="game-tags">
                      <span class="category-tag puzzle">Puzzle</span>
                      <span class="difficulty-tag hard">HARD</span>
                    </div>
                  </div>
                </div>
              );
            })}
          </div>
        </section>
      )}

      <!-- 6. 学习建议模块 -->
      <section class="info-module tips-module">
        <div class="module-header">
          <div class="module-icon tips-icon">
            <i class="fas fa-lightbulb"></i>
          </div>
          <div class="module-title-group">
            <h2 class="module-title">Puzzle Solving Tips</h2>
            <p class="module-subtitle">Expert strategies to improve your puzzle-solving skills</p>
          </div>
        </div>
        
        <div class="tips-grid">
          <div class="tip-item">
            <div class="tip-icon">
              <i class="fas fa-clock"></i>
            </div>
            <div class="tip-content">
              <h3 class="tip-title">Practice Daily</h3>
              <p class="tip-text">Spend 15-20 minutes daily solving puzzles to improve cognitive abilities</p>
            </div>
          </div>
          
          <div class="tip-item">
            <div class="tip-icon">
              <i class="fas fa-chart-line"></i>
            </div>
            <div class="tip-content">
              <h3 class="tip-title">Start Simple</h3>
              <p class="tip-text">Begin with easier puzzles and gradually increase difficulty level</p>
            </div>
          </div>
          
          <div class="tip-item">
            <div class="tip-icon">
              <i class="fas fa-eye"></i>
            </div>
            <div class="tip-content">
              <h3 class="tip-title">Look for Patterns</h3>
              <p class="tip-text">Train your brain to recognize patterns and logical connections</p>
            </div>
          </div>
          
          <div class="tip-item">
            <div class="tip-icon">
              <i class="fas fa-pause"></i>
            </div>
            <div class="tip-content">
              <h3 class="tip-title">Take Breaks</h3>
              <p class="tip-text">Step away when stuck - fresh perspective often reveals solutions</p>
            </div>
          </div>
        </div>
      </section>

      <!-- 7. 核心技能模块 -->
      <section class="info-module skills-module">
        <div class="module-header">
          <div class="module-icon skills-icon">
            <i class="fas fa-brain"></i>
          </div>
          <div class="module-title-group">
            <h2 class="module-title">Core Skills You'll Develop</h2>
            <p class="module-subtitle">Essential cognitive abilities gained through puzzle solving</p>
          </div>
        </div>
        
        <div class="skills-grid">
          <div class="skill-item">
            <div class="skill-icon">
              <i class="fas fa-lightbulb"></i>
            </div>
            <div class="skill-content">
              <h4 class="skill-title">Critical Thinking</h4>
              <p class="skill-description">Analyze problems and evaluate solutions systematically</p>
            </div>
          </div>
          
          <div class="skill-item">
            <div class="skill-icon">
              <i class="fas fa-cogs"></i>
            </div>
            <div class="skill-content">
              <h4 class="skill-title">Logic Reasoning</h4>
              <p class="skill-description">Apply logical principles to solve complex problems</p>
            </div>
          </div>
          
          <div class="skill-item">
            <div class="skill-icon">
              <i class="fas fa-search"></i>
            </div>
            <div class="skill-content">
              <h4 class="skill-title">Pattern Recognition</h4>
              <p class="skill-description">Identify recurring themes and structures</p>
            </div>
          </div>
          
          <div class="skill-item">
            <div class="skill-icon">
              <i class="fas fa-cube"></i>
            </div>
            <div class="skill-content">
              <h4 class="skill-title">Spatial Awareness</h4>
              <p class="skill-description">Understand relationships between objects in space</p>
            </div>
          </div>
          
          <div class="skill-item">
            <div class="skill-icon">
              <i class="fas fa-bullseye"></i>
            </div>
            <div class="skill-content">
              <h4 class="skill-title">Focus & Concentration</h4>
              <p class="skill-description">Maintain attention on complex tasks for extended periods</p>
            </div>
          </div>
          
          <div class="skill-item">
            <div class="skill-icon">
              <i class="fas fa-mountain"></i>
            </div>
            <div class="skill-content">
              <h4 class="skill-title">Persistence</h4>
              <p class="skill-description">Develop resilience when facing challenging problems</p>
            </div>
          </div>
        </div>
      </section>

    </div>
  </main>
</BaseLayout>

