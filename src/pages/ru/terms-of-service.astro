              <i class="fas fa-file-contract"></i>
            </div>
          </div>
          <div class="header-text">
            <h1 class="page-title">Terms of Service</h1>
            <p class="page-description">
              Clear guidelines for using our educational gaming platform safely and responsibly
            </p>
            <p class="last-updated">Last updated: January 2025</p>
          </div>
        </div>
      </section>

      <div class="terms-content">
        <!-- 渚ц竟鏍忕洰褰?-->
        <aside class="terms-sidebar">
          <div class="sidebar-header">
            <h3>Quick Navigation</h3>
          </div>
          <nav class="terms-nav">
            <ul>
              {termsSections.map((section) => (
                <li>
                  <a href={`#${section.id}`} class="nav-link">
                    <i class={`fas ${section.icon}`}></i>
                    <span>{section.title}</span>
                  </a>
                </li>
              ))}
            </ul>
          </nav>
        </aside>

        <!-- 涓昏鍐呭鍖哄煙 -->
        <div class="terms-main">
          {termsSections.map((section) => (
            <section class="terms-section" id={section.id}>
              <div class="section-header">
                <div class="section-icon-small">
                  <i class={`fas ${section.icon}`}></i>
                </div>
                <h2 class="section-title">{section.title}</h2>
              </div>

              <div class="section-content">
                {section.content && (
                  <p class="section-description">{section.content}</p>
                )}

                {section.items && (
                  <ul class="terms-list">
                    {section.items.map((item) => (
                      <li>{item}</li>
                    ))}
                  </ul>
                )}

                {section.subsections && section.subsections.map((subsection: any) => (
                  <div class="subsection">
                    <h3 class="subsection-title">{subsection.title}</h3>
                    {(subsection as any).content && (
                      <p class="subsection-description">{(subsection as any).content}</p>
                    )}
                    
                    {(subsection as any).type === 'permitted' && (
                      <div class="permitted-list">
                        <h5 class="list-title">Permitted activities:</h5>
                        <ul class="policy-list positive">
                          {(subsection as any).items?.map((item: string) => (
                            <li class="policy-item">
                              <i class="fas fa-check-circle"></i>
                              {item}
                            </li>
                          ))}
                        </ul>
                      </div>
                    )}
                    
                    {(subsection as any).type === 'prohibited' && (
                      <div class="prohibited-list">
                        <h5 class="list-title">Prohibited activities:</h5>
                        <ul class="policy-list negative">
                          {(subsection as any).items?.map((item: string) => (
                            <li class="policy-item">
                              <i class="fas fa-times-circle"></i>
                              {item}
                            </li>
                          ))}
                        </ul>
                      </div>
                    )}
                    
                    {(subsection as any).items && !(subsection as any).type && (
                      <ul class="policy-list">
                        {(subsection as any).items.map((item: string) => (
                          <li class="policy-item">
                            <i class="fas fa-info-circle"></i>
                            {item}
                          </li>
                        ))}
                      </ul>
                    )}
                    
                    {(subsection as any).note && (
                      <div class="policy-note">
                        <i class="fas fa-exclamation-triangle"></i>
                        <span>{(subsection as any).note}</span>
                      </div>
                    )}
                  </div>
                ))}

                {section.note && (
                  <div class="terms-note">
                    <i class="fas fa-lightbulb"></i>
                    <span>{section.note}</span>
                  </div>
                )}
              </div>
            </section>
          ))}

          <!-- 鑱旂郴琛屽姩鍖哄煙 -->
