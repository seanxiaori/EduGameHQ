---
import BaseLayout from '../../layouts/BaseLayout.astro';
import GameCard from '../../components/GameCard.astro';
import type { Game } from '../../types/game';
import fs from 'fs';
import path from 'path';

// 导入样式文件 - 修复正确的2级深度路径
import '../../styles/game-card.css';

// 读取游戏数据
const gamesPath = path.join(process.cwd(), 'src', 'data', 'games.json');
const allGames: Game[] = JSON.parse(fs.readFileSync(gamesPath, 'utf-8'));

// 筛选体育游戏
const sportsGames = allGames.filter(game => game.category === 'sports');

// 体育游戏数据规范化
const normalizedSportsGames = sportsGames.map((game: any) => {
  // 兼容旧格式游戏，为它们添加缺失的字段
  return {
    ...game,
    // 如果没有difficulty字段，根据游戏类型设置默认难度
    difficulty: game.difficulty || (
      (game.subcategory === 'basketball' || game.subcategory === 'football') ? 'Medium' :
      (game.subcategory === 'golf' || game.subcategory === 'bowling') ? 'Easy' :
      'Medium'
    ) as 'Easy' | 'Medium' | 'Hard',
    // 如果没有featured字段，手动指定一些热门游戏为featured
    featured: game.featured || ['basket-random', 'basketbros', 'qb-legend', 'table-tennis-world-tour'].includes(game.slug || game.id || ''),
    // 确保有slug字段
    slug: game.slug || game.id || '',
    // 标准化thumbnailUrl
    thumbnailUrl: game.thumbnailUrl || game.thumbnail,
    // 标准化iframeUrl  
    iframeUrl: game.iframeUrl || game.embedUrl || '',
    // 标准化tags
    tags: game.tags || []
  };
});

// 按运动类型分组（兼容两种格式）
const featuredSportsGames = normalizedSportsGames.filter(game => game.featured);
const basketballGames = normalizedSportsGames.filter(game => 
  game.subcategory === 'basketball' || 
  game.tags.includes('basketball') ||
  game.title.toLowerCase().includes('basketball') ||
  game.title.toLowerCase().includes('basket')
);
const ballGames = normalizedSportsGames.filter(game => 
  ['football', 'soccer', 'baseball', 'tennis', 'volleyball'].includes(game.subcategory || '') ||
  game.tags.some((tag: string) => ['football', 'soccer', 'baseball', 'tennis', 'volleyball'].includes(tag)) ||
  game.title.toLowerCase().includes('football') ||
  game.title.toLowerCase().includes('baseball')
);
const precisionGames = normalizedSportsGames.filter(game => 
  ['golf', 'bowling', 'archery'].includes(game.subcategory || '') ||
  game.tags.some((tag: string) => ['golf', 'bowling', 'mini-golf', 'precision'].includes(tag)) ||
  game.title.toLowerCase().includes('golf') ||
  game.title.toLowerCase().includes('bowling')
);
const individualSports = normalizedSportsGames.filter(game => 
  ['tennis', 'table-tennis', 'racing', 'athletics'].includes(game.subcategory || '') ||
  game.tags.some((tag: string) => ['tennis', 'table tennis', 'ping pong', 'racing'].includes(tag)) ||
  game.title.toLowerCase().includes('tennis') ||
  game.title.toLowerCase().includes('ping')
);

// SEO数据
const seoData = {
  title: "Sportspiele - EduGameHQ",
  description: "Werde aktiv und lerne durch Sportspiele! Kombiniere Sportunterrichtskonzepte mit spaßigem Gameplay und lerne Teamwork, Strategie, gesunden Wettbewerb und Fairplay durch virtuelle sportliche Herausforderungen.",
  keywords: "Sportspiele, Bildungsspiele, Basketball, Fußball, Tennis, Golf, Teamwork, Fitness, Kinder"
};

// 德语翻译配置
const translations = {
  // 页面主要内容
  main_title: "Sportspiele",
  main_description: "Werde aktiv und lerne durch Sportspiele! Kombiniere Sportunterrichtskonzepte mit spaßigem Gameplay und lerne Teamwork, Strategie, gesunden Wettbewerb und Fairplay durch virtuelle sportliche Herausforderungen.",
  
  // 游戏模块标题
  featured_games: "Beliebte Sportspiele",
  featured_subtitle: "Spiele auf Meisterschaftsniveau, die deine sportlichen Fähigkeiten testen",
  basketball_games: "Basketballspiele",
  basketball_subtitle: "Dribbeln, werfen und punkten mit diesen Basketballspielen",
  ball_games: "Ballspiele",
  ball_subtitle: "Kicke, wirf und fange deinen Weg zum Sieg",
  precision_games: "Präzisionsspiele",
  precision_subtitle: "Perfektioniere deine Technik in diesen Präzisionssportarten",
  individual_sports: "Individualsport",
  individual_subtitle: "Fordere dich selbst in diesen Individualsportarten heraus",
  
  // 学习建议
  sports_learning_tips: "Sport-Gaming-Tipps",
  tips_subtitle: "Verbessere deine Leistung und genieße Sportspiele mehr",
  practice_precision: "Übe Präzision",
  precision_description: "Konzentriere dich auf Genauigkeit statt Geschwindigkeit, um deine Fähigkeiten zu verbessern",
  master_timing: "Beherrsche das Timing",
  timing_description: "Lerne den perfekten Moment zum Handeln in jeder Sportart",
  learn_teamwork: "Lerne Teamwork",
  teamwork_description: "Verstehe, wie man in Mannschaftssportarten zusammenarbeitet",
  stay_focused: "Bleibe konzentriert",
  focus_description: "Halte deine Konzentration für bessere Leistungen aufrecht",
  
  // 核心技能
  sports_core_skills: "Sportliche Fähigkeiten, die du entwickeln wirst",
  skills_subtitle: "Wesentliche sportliche und Lebenskompetenzen, die durch Sportspiele verbessert werden",
  teamwork: "Teamwork",
  teamwork_desc: "Lerne, effektiv mit Teamkollegen zu arbeiten und euch gegenseitig zu unterstützen",
  coordination: "Koordination",
  coordination_desc: "Entwickle Hand-Auge-Koordination und motorische Fähigkeiten",
  strategic_thinking: "Strategisches Denken",
  strategic_desc: "Lerne taktisches Denken und Spielplanung",
  physical_fitness: "Körperliche Fitness",
  fitness_desc: "Verbessere Kraft, Ausdauer und allgemeine Gesundheit",
  sportsmanship: "Fairplay",
  sportsmanship_desc: "Übe Fair Play und Respekt gegenüber anderen",
  mental_toughness: "Mentale Stärke",
  mental_desc: "Entwickle Widerstandsfähigkeit und Selbstvertrauen durch Herausforderungen"
