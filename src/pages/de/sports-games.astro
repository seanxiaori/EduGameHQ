// 翻译函数
const t = (translations: Record<string, string>, key: string, fallback: string = '') => {
  return translations[key] || fallback;
};

// 体育学习建议
const sportsLearningTips = [
  {
    icon: 'fas fa-clock',
    title: 'Regular Practice',
    text: 'Spend 30-45 minutes daily practicing sports skills to improve coordination and fitness'
  },
  {
    icon: 'fas fa-users',
    title: 'Learn Teamwork',
    text: 'Focus on communication, cooperation, and supporting your teammates'
  },
  {
    icon: 'fas fa-handshake',
    title: 'Fair Play',
    text: 'Practice good sportsmanship and respect for rules and opponents'
  },
  {
    icon: 'fas fa-heart',
    title: 'Stay Active',
    text: 'Maintain physical health through regular exercise and healthy habits'
  }
];

// 体育核心技能
const sportsCoreSkills = [
  {
    icon: 'fas fa-users',
    title: 'Teamwork',
    description: 'Learn to work effectively with teammates and support each other'
  },
  {
    icon: 'fas fa-crosshairs',
    title: 'Coordination',
    description: 'Develop hand-eye coordination and motor skills'
  },
  {
    icon: 'fas fa-chess',
    title: 'Strategic Thinking',
    description: 'Learn tactical thinking and game planning'
  },
  {
    icon: 'fas fa-dumbbell',
    title: 'Physical Fitness',
    description: 'Improve strength, endurance, and overall health'
  },
  {
    icon: 'fas fa-medal',
    title: 'Sportsmanship',
    description: 'Practice fair play and respect for others'
  },
  {
    icon: 'fas fa-brain',
    title: 'Mental Toughness',
    description: 'Build resilience and confidence through challenges'
  }
];

console.log('🏃‍♂️ 体育学习建议:', sportsLearningTips.length, '条');
console.log('🧠 体育核心技能:', sportsCoreSkills.length, '项');
---

<BaseLayout title={seoData.title} description={seoData.description}>
  <!-- 引入统一游戏卡片样式 -->
  
  
  <main class="main-content">
    <div class="content-wrapper">
      
      <!-- 1. 页面顶部区域 -->
      <section class="page-header">
        <div class="header-content">
          <div class="header-icon">
            <div class="section-icon sports">
              <i class="fas fa-running"></i>
            </div>
          </div>
          <div class="header-text">
            <h1 class="page-title">{t(translations, "main_title", "Sportspiele")}</h1>
            <p class="page-description">
              {t(translations, "main_description", "Werde aktiv und lerne durch Sportspiele! Kombiniere Sportunterrichtskonzepte mit spaßigem Gameplay und lerne Teamwork, Strategie, gesunden Wettbewerb und Fairplay durch virtuelle sportliche Herausforderungen.")}
            </p>
          </div>
        </div>
      </section>

      <!-- 2. 特色游戏模块 -->
      {featuredSportsGames.length > 0 && (
        <section class="game-module featured-module">
          <div class="module-header">
            <div class="module-icon featured-icon">
              <i class="fas fa-star"></i>
            </div>
            <div class="module-title-group">
              <h2 class="module-title">{t(translations, "featured_games", "Beliebte Sportspiele")}</h2>
              <p class="module-subtitle">{t(translations, "featured_subtitle", "Spiele auf Meisterschaftsniveau, die deine sportlichen Fähigkeiten testen")}</p>
            </div>
          </div>
          
          <div class="games-grid">
            {featuredSportsGames.slice(0, 6).map((game) => (
              <GameCard game={game} showPlayHistory={true} showPopularity={true} showFavorite={true} />
            ))}
          </div>
        </section>
      )}

      <!-- 3. 篮球游戏模块 -->
      {basketballGames.length > 0 && (
        <section class="game-module difficulty-module basketball-module">
          <div class="module-header">
            <div class="module-icon basketball-icon">
              <i class="fas fa-basketball-ball"></i>
            </div>
            <div class="module-title-group">
              <h2 class="module-title">{t(translations, "basketball_games", "Basketballspiele")}</h2>
              <p class="module-subtitle">{t(translations, "basketball_subtitle", "Dribbeln, werfen und punkten mit diesen Basketballspielen")}</p>
            </div>
          </div>
          
          <div class="games-grid">
            {basketballGames.map((game) => (
              <GameCard game={game} showPlayHistory={true} showPopularity={true} showFavorite={true} />
            ))}
          </div>
        </section>
      )}

      <!-- 4. 球类游戏模块 -->
      {ballGames.length > 0 && (
        <section class="game-module difficulty-module ball-module">
          <div class="module-header">
            <div class="module-icon ball-icon">
              <i class="fas fa-futbol"></i>
            </div>
            <div class="module-title-group">
              <h2 class="module-title">{t(translations, "ball_games", "Ballspiele")}</h2>
              <p class="module-subtitle">{t(translations, "ball_subtitle", "Kicke, wirf und fange deinen Weg zum Sieg")}</p>
            </div>
          </div>
          
          <div class="games-grid">
            {ballGames.map((game) => (
              <GameCard game={game} showPlayHistory={true} showPopularity={true} showFavorite={true} />
            ))}
          </div>
        </section>
      )}

      <!-- 5. 精准游戏模块 -->
      {precisionGames.length > 0 && (
        <section class="game-module difficulty-module precision-module">
          <div class="module-header">
            <div class="module-icon precision-icon">
              <i class="fas fa-golf-ball"></i>
            </div>
            <div class="module-title-group">
              <h2 class="module-title">{t(translations, "precision_games", "Präzisionsspiele")}</h2>
              <p class="module-subtitle">{t(translations, "precision_subtitle", "Perfektioniere deine Technik in diesen Präzisionssportarten")}</p>
            </div>
          </div>
          
          <div class="games-grid">
            {precisionGames.map((game) => (
              <GameCard game={game} showPlayHistory={true} showPopularity={true} showFavorite={true} />
            ))}
          </div>
        </section>
      )}

      <!-- 6. 个人运动模块 -->
      {individualSports.length > 0 && (
        <section class="game-module difficulty-module individual-module">
          <div class="module-header">
            <div class="module-icon individual-icon">
              <i class="fas fa-running"></i>
            </div>
            <div class="module-title-group">
              <h2 class="module-title">{t(translations, "individual_sports", "Individualsport")}</h2>
              <p class="module-subtitle">{t(translations, "individual_subtitle", "Fordere dich selbst in diesen Individualsportarten heraus")}</p>
            </div>
          </div>
          
          <div class="games-grid">
            {individualSports.map((game) => (
              <GameCard game={game} showPlayHistory={true} showPopularity={true} showFavorite={true} />
            ))}
          </div>
        </section>
      )}

      <!-- 7. 学习建议模块 -->
      <section class="info-module tips-module">
        <div class="module-header">
          <div class="module-icon tips-icon">
            <i class="fas fa-lightbulb"></i>
          </div>
          <div class="module-title-group">
            <h2 class="module-title">{t(translations, "tips_title", "Sport-Gaming-Tipps")}</h2>
            <p class="module-subtitle">{t(translations, "tips_subtitle", "Verbessere deine Leistung und genieße Sportspiele mehr")}</p>
          </div>
        </div>
        
        <div class="tips-grid">
          <div class="tip-item">
            <div class="tip-icon">
              <i class="fas fa-bullseye"></i>
            </div>
            <div class="tip-content">
              <h4 class="tip-title">{t(translations, "tip_precision", "Präzision üben")}</h4>
              <p class="tip-text">{t(translations, "tip_precision_desc", "Konzentriere dich auf Genauigkeit statt Geschwindigkeit, um deine Fähigkeiten zu verbessern")}</p>
            </div>
          </div>
          
          <div class="tip-item">
            <div class="tip-icon">
              <i class="fas fa-clock"></i>
            </div>
            <div class="tip-content">
              <h4 class="tip-title">{t(translations, "tip_timing", "Timing meistern")}</h4>
              <p class="tip-text">{t(translations, "tip_timing_desc", "Lerne den perfekten Moment zum Handeln in jeder Sportart")}</p>
            </div>
          </div>
          
          <div class="tip-item">
            <div class="tip-icon">
              <i class="fas fa-users"></i>
            </div>
            <div class="tip-content">
              <h4 class="tip-title">{t(translations, "tip_teamwork", "Teamwork lernen")}</h4>
              <p class="tip-text">{t(translations, "tip_teamwork_desc", "Verstehe, wie man in Mannschaftssportarten zusammenarbeitet")}</p>
            </div>
          </div>
          
          <div class="tip-item">
            <div class="tip-icon">
              <i class="fas fa-trophy"></i>
            </div>
            <div class="tip-content">
              <h4 class="tip-title">{t(translations, "tip_goals", "Ziele setzen")}</h4>
              <p class="tip-text">{t(translations, "tip_goals_desc", "Fordere dich heraus, neue persönliche Bestleistungen zu erreichen")}</p>
            </div>
          </div>
        </div>
      </section>

      <!-- 8. 核心技能模块 -->
      <section class="info-module skills-module">
        <div class="module-header">
          <div class="module-icon skills-icon">
            <i class="fas fa-brain"></i>
          </div>
          <div class="module-title-group">
            <h2 class="module-title">{t(translations, "skills_title", "Sportliche Fähigkeiten, die du entwickelst")}</h2>
            <p class="module-subtitle">{t(translations, "skills_subtitle", "Wesentliche Fähigkeiten, die durch Sport-Gaming erworben werden")}</p>
          </div>
        </div>

        <div class="skills-grid">
          <div class="skill-item">
            <div class="skill-icon">
              <i class="fas fa-hand-paper"></i>
            </div>
            <div class="skill-content">
              <h4 class="skill-title">{t(translations, "skill_coordination", "Hand-Augen-Koordination")}</h4>
              <p class="skill-description">{t(translations, "skill_coordination_desc", "Verbessere Reaktionszeit und Präzision")}</p>
            </div>
          </div>

          <div class="skill-item">
            <div class="skill-icon">
              <i class="fas fa-chess"></i>
            </div>
            <div class="skill-content">
              <h4 class="skill-title">{t(translations, "skill_strategy", "Strategisches Denken")}</h4>
              <p class="skill-description">{t(translations, "skill_strategy_desc", "Plane Züge und antizipiere Gegner")}</p>
            </div>
          </div>

          <div class="skill-item">
            <div class="skill-icon">
              <i class="fas fa-heartbeat"></i>
            </div>
            <div class="skill-content">
              <h4 class="skill-title">{t(translations, "skill_focus", "Fokus & Konzentration")}</h4>
              <p class="skill-description">{t(translations, "skill_focus_desc", "Halte die Aufmerksamkeit unter Druck aufrecht")}</p>
            </div>
          </div>

          <div class="skill-item">
            <div class="skill-icon">
              <i class="fas fa-medal"></i>
            </div>
            <div class="skill-content">
              <h4 class="skill-title">{t(translations, "skill_competitive", "Wettkampfgeist")}</h4>
              <p class="skill-description">{t(translations, "skill_competitive_desc", "Entwickle gesunde Wettkampfgewohnheiten")}</p>
            </div>
          </div>
          
          <div class="skill-item">
            <div class="skill-icon">
              <i class="fas fa-stopwatch"></i>
            </div>
            <div class="skill-content">
              <h4 class="skill-title">{t(translations, "skill_decision", "Schnelle Entscheidungsfindung")}</h4>
              <p class="skill-description">{t(translations, "skill_decision_desc", "Lerne schnell und entschlossen zu handeln")}</p>
            </div>
          </div>
          
          <div class="skill-item">
            <div class="skill-icon">
              <i class="fas fa-arrows-alt"></i>
            </div>
            <div class="skill-content">
              <h4 class="skill-title">{t(translations, "skill_motor", "Motorische Fähigkeiten")}</h4>
              <p class="skill-description">{t(translations, "skill_motor_desc", "Verbessere die körperliche Koordination")}</p>
            </div>
          </div>
        </div>
      </section>

    </div>
  </main>
</BaseLayout>

