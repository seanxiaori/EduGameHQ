---
import BaseLayout from '../layouts/BaseLayout.astro';
import type { Game } from '../types/game';
import gamesData from '../data/games/games.json';

// 获取搜索查询参数
const url = new URL(Astro.request.url);
const query = url.searchParams.get('q') || '';
const searchQuery = query.toLowerCase().trim();

// 调试信息
console.log('=== SEARCH PAGE DEBUG ===');
console.log('Full URL:', url.toString());
console.log('Search params:', Object.fromEntries(url.searchParams.entries()));
console.log('Query param "q":', url.searchParams.get('q'));
console.log('Processed query:', query);
console.log('Search query (lowercase):', searchQuery);
console.log('Query length:', query.length);

// 将游戏对象转换为数组，并添加slug属性
const games: Game[] = Object.entries(gamesData).map(([slug, game]) => ({
  ...game,
  slug
})) as Game[];

console.log('Total games loaded:', games.length);
console.log('Sample game:', games[0]);

// 搜索逻辑
let searchResults: Game[] = [];

if (searchQuery.length > 0) {
  // 特殊关键词映射
  const keywordMapping: Record<string, string[]> = {
    'math': ['math', 'mathematics', 'arithmetic', 'algebra', 'geometry', 'number'],
    'science': ['science', 'physics', 'chemistry', 'biology', 'experiment'],
    'coding': ['coding', 'programming', 'code', 'computer', 'algorithm'],
    'programming': ['coding', 'programming', 'code', 'computer', 'algorithm'],
    'language': ['language', 'english', 'vocabulary', 'grammar', 'reading', 'writing'],
    'english': ['language', 'english', 'vocabulary', 'grammar', 'reading', 'writing'],
    'puzzle': ['puzzle', 'logic', 'brain', 'thinking', 'strategy'],
    'sports': ['sports', 'basketball', 'football', 'soccer', 'tennis', 'athletic'],
    'art': ['art', 'creativity', 'drawing', 'painting', 'design', 'creative'],
    'creativity': ['art', 'creativity', 'drawing', 'painting', 'design', 'creative'],
    'geography': ['geography', 'history', 'world', 'countries', 'maps', 'culture'],
    'history': ['geography', 'history', 'world', 'countries', 'maps', 'culture']
  };

  // 获取搜索关键词（包括映射的关键词）
  const searchKeywords = keywordMapping[searchQuery] || [searchQuery];
  
  searchResults = games.filter(game => {
    // 搜索游戏标题
    const titleMatch = searchKeywords.some(keyword => 
      game.title.toLowerCase().includes(keyword)
    );
    
    // 搜索游戏描述
    const descriptionMatch = searchKeywords.some(keyword => 
      game.description.toLowerCase().includes(keyword)
    );
    
    // 搜索分类
    const categoryMatch = searchKeywords.some(keyword => 
      game.category.toLowerCase().includes(keyword) ||
      game.categoryName.toLowerCase().includes(keyword)
    );
    
    // 搜索标签
    const tagsMatch = game.tags && game.tags.some(tag => 
      searchKeywords.some(keyword => tag.toLowerCase().includes(keyword))
    );
    
    // 搜索年龄范围
    const ageMatch = searchKeywords.some(keyword => 
      game.ageRange.toLowerCase().includes(keyword)
    );
    
    // 搜索难度
    const difficultyMatch = searchKeywords.some(keyword => 
      game.difficulty.toLowerCase().includes(keyword)
    );
    
    return titleMatch || descriptionMatch || categoryMatch || tagsMatch || ageMatch || difficultyMatch;
  });
  
  console.log(`Found ${searchResults.length} games for query: "${searchQuery}"`);
  console.log('Search results:', searchResults.map(g => g.title));
}
---

<BaseLayout 
  title={query ? `Search Results for "${query}" | EduGameHQ` : "Search Educational Games | EduGameHQ"}
  description={query ? `Find educational games matching "${query}". Browse our collection of free learning games for kids aged 6-18.` : "Search through our collection of 240+ educational games for kids aged 6-18. Find math, science, coding, language, sports, art and geography games."}
>
  <main class="main-content">
    <div class="content-wrapper">
      
      <!-- 搜索结果标题 -->
      <section class="search-header">
        <h1 class="search-title">
          {query ? `Search Results for "${query}"` : 'Search Educational Games'}
        </h1>
        <p class="search-description">
          {query 
            ? `Found ${searchResults.length} games matching your search`
            : 'Enter keywords to search through our collection of 240+ educational games for kids aged 6-18.'
          }
        </p>
      </section>

      <!-- 搜索结果 -->
      {query && searchResults.length > 0 && (
        <section class="search-results">
          <div class="games-grid">
            {searchResults.map((game) => (
              <div class="game-card" key={game.slug}>
                <div class="game-image-container">
                  <img 
                    src={`/images/games/${game.images?.[0] || 'placeholder.jpg'}`} 
                    alt={game.title}
                    class="game-image"
                    loading="lazy"
                  />
                  <div class="game-overlay">
                    <a href={`/games/${game.slug}`} class="play-button">
                      <i class="fas fa-play"></i>
                      <span>Play Now</span>
                    </a>
                  </div>
                </div>
                <div class="game-info">
                  <h3 class="game-title">{game.title}</h3>
                  <p class="game-description">{game.description}</p>
                  <div class="game-tags">
                    <span class="category-tag" data-category={game.category}>
                      {game.categoryName}
                    </span>
                    <span class="age-tag">{game.ageRange}</span>
                    <span class="difficulty-tag" data-difficulty={game.difficulty.toLowerCase()}>
                      {game.difficulty}
                    </span>
                  </div>
                </div>
              </div>
            ))}
          </div>
        </section>
      )}

      <!-- 无搜索结果 -->
      {query && searchResults.length === 0 && (
        <section class="no-results">
          <div class="no-results-content">
            <i class="fas fa-search no-results-icon"></i>
            <h2 class="no-results-title">No games found</h2>
            <p class="no-results-text">
              We couldn't find any games matching "<strong>{query}</strong>". 
              Try searching for different keywords like "math", "science", "coding", or "puzzle".
            </p>
          </div>
        </section>
      )}

    </div>
  </main>
</BaseLayout>

<style>
  /* 主要内容区域 */
  .main-content {
    width: 100%;
    background: linear-gradient(135deg, #FEFCFB 0%, #F8F6F3 50%, #FFF7ED 100%);
    min-height: 100vh;
  }

  .content-wrapper {
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem;
  }

  /* 搜索头部 */
  .search-header {
    text-align: center;
    margin-bottom: 3rem;
    padding: 2rem;
    background: white;
    border-radius: 20px;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
    border: 1px solid #E5E7EB;
  }

  .search-title {
    font-family: 'Space Grotesk', sans-serif;
    font-size: 2.5rem;
    font-weight: 700;
    color: #1F2937;
    margin-bottom: 1rem;
  }

  .search-description {
    font-size: 1.125rem;
    color: #6B7280;
    max-width: 600px;
    margin: 0 auto;
    line-height: 1.6;
  }

  /* 游戏网格 */
  .games-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    gap: 2rem;
    margin-bottom: 3rem;
  }

  /* 游戏卡片样式 */
  .game-card {
    background: white;
    border-radius: 16px;
    overflow: hidden;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
    border: 1px solid #E5E7EB;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    position: relative;
  }

  .game-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.15);
  }

  .game-image-container {
    position: relative;
    height: 200px;
    overflow: hidden;
  }

  .game-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .game-card:hover .game-image {
    transform: scale(1.05);
  }

  .game-overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(135deg, rgba(0, 0, 0, 0.4) 0%, rgba(0, 0, 0, 0.6) 100%);
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
    transition: all 0.3s ease;
  }

  .game-card:hover .game-overlay {
    opacity: 1;
  }

  .play-button {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    background: linear-gradient(135deg, #3B82F6 0%, #1D4ED8 100%);
    color: white;
    padding: 0.75rem 1.5rem;
    border-radius: 50px;
    text-decoration: none;
    font-weight: 600;
    transform: scale(0.9);
    transition: all 0.3s ease;
  }

  .game-card:hover .play-button {
    transform: scale(1);
  }

  .play-button:hover {
    background: linear-gradient(135deg, #1D4ED8 0%, #1E40AF 100%);
    transform: scale(1.05);
  }

  .game-info {
    padding: 1.5rem;
  }

  .game-title {
    font-family: 'Space Grotesk', sans-serif;
    font-size: 1.25rem;
    font-weight: 700;
    color: #1F2937;
    margin-bottom: 0.5rem;
    line-height: 1.3;
  }

  .game-description {
    color: #6B7280;
    font-size: 0.875rem;
    line-height: 1.5;
    margin-bottom: 1rem;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .game-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .category-tag,
  .age-tag,
  .difficulty-tag {
    padding: 0.25rem 0.75rem;
    border-radius: 50px;
    font-size: 0.75rem;
    font-weight: 600;
    color: white;
  }

  /* 分类标签颜色 */
  .category-tag[data-category="math"] {
    background: linear-gradient(135deg, #EA580C, #DC2626);
  }

  .category-tag[data-category="science"] {
    background: linear-gradient(135deg, #059669, #047857);
  }

  .category-tag[data-category="coding"] {
    background: linear-gradient(135deg, #2563EB, #1D4ED8);
  }

  .category-tag[data-category="language"] {
    background: linear-gradient(135deg, #C026D3, #A21CAF);
  }

  .category-tag[data-category="puzzle"] {
    background: linear-gradient(135deg, #7C3AED, #6D28D9);
  }

  .category-tag[data-category="sports"] {
    background: linear-gradient(135deg, #DC2626, #B91C1C);
  }

  .category-tag[data-category="art"] {
    background: linear-gradient(135deg, #EC4899, #DB2777);
  }

  .category-tag[data-category="geography"] {
    background: linear-gradient(135deg, #0891B2, #0E7490);
  }

  .age-tag {
    background: linear-gradient(135deg, #6B7280, #4B5563);
  }

  .difficulty-tag[data-difficulty="easy"] {
    background: linear-gradient(135deg, #10B981, #059669);
  }

  .difficulty-tag[data-difficulty="medium"] {
    background: linear-gradient(135deg, #F59E0B, #D97706);
  }

  .difficulty-tag[data-difficulty="hard"] {
    background: linear-gradient(135deg, #EF4444, #DC2626);
  }

  /* 无结果页面 */
  .no-results {
    text-align: center;
    padding: 4rem 2rem;
  }

  .no-results-content {
    max-width: 500px;
    margin: 0 auto;
  }

  .no-results-icon {
    font-size: 4rem;
    color: #D1D5DB;
    margin-bottom: 1.5rem;
  }

  .no-results-title {
    font-family: 'Space Grotesk', sans-serif;
    font-size: 1.875rem;
    font-weight: 700;
    color: #1F2937;
    margin-bottom: 1rem;
  }

  .no-results-text {
    color: #6B7280;
    font-size: 1.125rem;
    line-height: 1.6;
  }

  /* 响应式设计 */
  @media (max-width: 768px) {
    .content-wrapper {
      padding: 1rem;
    }

    .search-header {
      padding: 1.5rem;
      margin-bottom: 2rem;
    }

    .search-title {
      font-size: 2rem;
    }

    .search-description {
      font-size: 1rem;
    }

    .games-grid {
      grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
      gap: 1.5rem;
    }

    .game-image-container {
      height: 160px;
    }

    .game-info {
      padding: 1rem;
    }

    .game-title {
      font-size: 1.125rem;
    }

    .no-results {
      padding: 3rem 1rem;
    }

    .no-results-icon {
      font-size: 3rem;
    }

    .no-results-title {
      font-size: 1.5rem;
    }

    .no-results-text {
      font-size: 1rem;
    }
  }

  @media (max-width: 640px) {
    .games-grid {
      grid-template-columns: 1fr;
    }

    .search-title {
      font-size: 1.75rem;
    }
  }
</style> 

