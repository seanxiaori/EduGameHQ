  <!-- ÁÆÄÂåñÁöÑÊêúÁ¥¢ÂäüËÉΩJavaScript -->
  <script is:inline>
    // ÁÆÄÂåñÁöÑÊêúÁ¥¢ÁÆ°ÁêÜÂô®
    class SearchManager {
      constructor() {
        this.games = [];
        this.init();
      }

      // ÂàùÂßãÂåñ
      async init() {
        try {
          await this.loadGamesData();
          this.handleSearch();
          console.log('üîç ÊêúÁ¥¢ÁÆ°ÁêÜÂô®ÂàùÂßãÂåñÂÆåÊàê');
        } catch (error) {
          console.error('ÊêúÁ¥¢ÂàùÂßãÂåñÂ§±Ë¥•:', error);
          this.displayError();
        }
      }

      // Âä†ËΩΩÊ∏∏ÊàèÊï∞ÊçÆ
      async loadGamesData() {
        const response = await fetch('/games-data.json');
        if (!response.ok) {
          throw new Error(`Âä†ËΩΩÊ∏∏ÊàèÊï∞ÊçÆÂ§±Ë¥•: ${response.status}`);
        }
        
        const rawData = await response.json();
        this.games = Object.entries(rawData).map(([slug, game]) => ({
          ...game,
          slug
        }));
        
        console.log(`Â∑≤Âä†ËΩΩ ${this.games.length} ‰∏™Ê∏∏ÊàèÊï∞ÊçÆ`);
      }

      // Â§ÑÁêÜÊêúÁ¥¢
      handleSearch() {
        const urlParams = new URLSearchParams(window.location.search);
        const query = urlParams.get('q') || '';
        
        if (query.length > 0) {
          const searchResults = this.performSearch(query);
          this.displaySearchResults(searchResults, query);
        } else {
          this.displaySearchPrompt();
        }
      }

      // ÊâßË°åÊêúÁ¥¢
      performSearch(query) {
        const searchTerm = query.toLowerCase().trim();
        
        return this.games.filter(game => {
          return (
            (game.title && game.title.toLowerCase().includes(searchTerm)) ||
            (game.description && game.description.toLowerCase().includes(searchTerm)) ||
            (game.category && game.category.toLowerCase().includes(searchTerm)) ||
            (game.tags && Array.isArray(game.tags) && 
             game.tags.some(tag => tag.toLowerCase().includes(searchTerm)))
          );
        });
      }

      // ÂàõÂª∫ÁÆÄÂåñÁöÑÊ∏∏ÊàèÂç°ÁâáHTMLÔºà‰ΩøÁî®GameCardÁªìÊûÑÔºâ
      createGameCard(game) {
        const imageUrl = game.thumbnailUrl || '/images/logo.svg';
        const gameUrl = `/games/${game.slug}`;
        const categoryClass = game.category ? game.category.toLowerCase() : 'puzzle';
        
        // Ê®°Êãü‰∫∫Ê∞îÂÄº
        const popularity = Math.floor(Math.random() * 15000) + 500;
        const popularityDisplay = popularity >= 1000 ? 
          `${(popularity / 1000).toFixed(1)}K` : popularity.toString();
        
        return `
          <div class="game-card" onclick="window.location.href='${gameUrl}'">
            <div class="game-image-container">
              <img src="${imageUrl}" alt="${game.title}" class="game-image" loading="lazy">
              <div class="game-overlay">
                <div class="popularity-badge">${popularityDisplay}</div>
                <button class="play-button">
                  <i class="fas fa-play"></i>
                  <span>Play Now</span>
                </button>
              </div>
            </div>
            <div class="game-info">
              <h3 class="game-title">${game.title}</h3>
              <div class="game-tags">
                <span class="category-tag ${categoryClass}">${game.categoryName || game.category}</span>
              </div>
            </div>
          </div>
        `;
      }

      // ÊòæÁ§∫ÊêúÁ¥¢ÁªìÊûú
      displaySearchResults(results, query) {
        const searchPrompt = document.getElementById('searchPrompt');
        const searchResultsModule = document.getElementById('searchResultsModule');
        const gamesGrid = document.getElementById('gamesGrid');
        const noResults = document.getElementById('noResults');
        
        // ÈöêËóèÂÖ∂‰ªñÂå∫Âüü
        searchPrompt.style.display = 'none';
        noResults.style.display = 'none';
        
        if (results.length > 0) {
          // ÊòæÁ§∫ÊêúÁ¥¢ÁªìÊûú
          searchResultsModule.style.display = 'block';
          gamesGrid.innerHTML = results.map(game => this.createGameCard(game)).join('');
          
          // Êõ¥Êñ∞Ê†áÈ¢ò
          document.getElementById('searchTitle').textContent = `Search Results for "${query}"`;
          document.getElementById('searchDescription').textContent = 
            `Found ${results.length} educational games matching your search.`;
          document.getElementById('resultsTitle').textContent = `Search Results`;
          document.getElementById('resultsSubtitle').textContent = 
            `Found ${results.length} games for "${query}"`;
          
          console.log(`ÊòæÁ§∫ ${results.length} ‰∏™ÊêúÁ¥¢ÁªìÊûú`);
        } else {
          this.displayNoResults(query);
        }
      }

      // ÊòæÁ§∫Êó†ÁªìÊûú
      displayNoResults(query) {
        const searchPrompt = document.getElementById('searchPrompt');
        const searchResultsModule = document.getElementById('searchResultsModule');
        const noResults = document.getElementById('noResults');
        
        searchPrompt.style.display = 'none';
        searchResultsModule.style.display = 'none';
        noResults.style.display = 'block';
        
        document.getElementById('searchTitle').textContent = `No Results for "${query}"`;
        document.getElementById('searchDescription').textContent = 
          'Try different keywords or explore our game categories.';
        document.getElementById('noResultsText').textContent = 
          `We couldn't find any games matching "${query}". Try different keywords or browse our categories.`;
      }

      // ÊòæÁ§∫ÊêúÁ¥¢ÊèêÁ§∫
      displaySearchPrompt() {
        const searchPrompt = document.getElementById('searchPrompt');
        const searchResultsModule = document.getElementById('searchResultsModule');
        const noResults = document.getElementById('noResults');
        
        searchPrompt.style.display = 'block';
        searchResultsModule.style.display = 'none';
        noResults.style.display = 'none';
      }

      // ÊòæÁ§∫ÈîôËØØ
      displayError() {
        const noResults = document.getElementById('noResults');
        const noResultsText = document.getElementById('noResultsText');
        
        noResults.style.display = 'block';
        noResultsText.textContent = 'Sorry, there was an error loading the games. Please try again later.';
      }
    }

    // È°µÈù¢Âä†ËΩΩÂÆåÊàêÂêéÂàùÂßãÂåñ
    document.addEventListener('DOMContentLoaded', function() {
      window.searchManager = new SearchManager();
    });
  </script>
