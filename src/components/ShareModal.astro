---
// 分享模态框组件 - 提供多平台分享功能
export interface Props {
  gameTitle: string;
  gameUrl: string;
  gameDescription?: string;
  gameImage?: string;
}

const { gameTitle, gameUrl, gameDescription = "", gameImage = "" } = Astro.props;

// 生成分享文案
const shareText = `Check out this awesome educational game: ${gameTitle}! Perfect for learning and fun. Play now at EduGameHQ!`;
const hashtags = "EduGameHQ,EducationalGames,Learning,Kids,Games";
---

<!-- 分享模态框 -->
<div id="shareModal" class="share-modal-overlay" style="display: none;">
  <div class="share-modal">
    <!-- 模态框头部 -->
    <div class="share-modal-header">
      <div class="share-header-content">
        <div class="share-icon">
          <i class="fas fa-share-alt"></i>
        </div>
        <div class="share-title-group">
          <h3 class="share-title">Share This Game</h3>
          <p class="share-subtitle">Spread the fun and learning!</p>
        </div>
      </div>
      <button class="share-close-btn" onclick="closeShareModal()">
        <i class="fas fa-times"></i>
      </button>
    </div>

    <!-- 游戏信息预览 -->
    <div class="share-game-preview">
      {gameImage && (
        <div class="share-game-image">
          <img src={gameImage} alt={gameTitle} />
        </div>
      )}
      <div class="share-game-info">
        <h4 class="share-game-title">{gameTitle}</h4>
        <p class="share-game-description">{gameDescription}</p>
        <span class="share-game-url">{gameUrl}</span>
      </div>
    </div>

    <!-- 分享选项 -->
    <div class="share-options">
      <h4 class="share-section-title">
        <i class="fas fa-rocket"></i>
        Share on Social Media
      </h4>
      
      <div class="share-buttons-grid">
        <!-- Twitter分享 -->
        <button class="share-btn twitter-btn" onclick="shareToTwitter()">
          <i class="fab fa-twitter"></i>
          <span>Twitter</span>
        </button>

        <!-- Facebook分享 -->
        <button class="share-btn facebook-btn" onclick="shareToFacebook()">
          <i class="fab fa-facebook-f"></i>
          <span>Facebook</span>
        </button>

        <!-- WhatsApp分享 -->
        <button class="share-btn whatsapp-btn" onclick="shareToWhatsApp()">
          <i class="fab fa-whatsapp"></i>
          <span>WhatsApp</span>
        </button>

        <!-- Telegram分享 -->
        <button class="share-btn telegram-btn" onclick="shareToTelegram()">
          <i class="fab fa-telegram-plane"></i>
          <span>Telegram</span>
        </button>

        <!-- Email分享 -->
        <button class="share-btn email-btn" onclick="shareToEmail()">
          <i class="fas fa-envelope"></i>
          <span>Email</span>
        </button>

        <!-- Reddit分享 -->
        <button class="share-btn reddit-btn" onclick="shareToReddit()">
          <i class="fab fa-reddit-alien"></i>
          <span>Reddit</span>
        </button>
      </div>
    </div>

    <!-- 复制选项 -->
    <div class="share-copy-section">
      <h4 class="share-section-title">
        <i class="fas fa-copy"></i>
        Copy & Share
      </h4>
      
      <div class="copy-options">
        <!-- 复制链接 -->
        <div class="copy-item">
          <div class="copy-input-group">
            <input 
              type="text" 
              id="gameUrlInput" 
              value={gameUrl} 
              readonly 
              class="copy-input"
            />
            <button class="copy-btn" onclick="copyGameUrl()">
              <i class="fas fa-copy"></i>
              Copy Link
            </button>
          </div>
          <span class="copy-label">Game URL</span>
        </div>

        <!-- 复制嵌入代码 -->
        <div class="copy-item">
          <div class="copy-input-group">
            <input 
              type="text" 
              id="embedCodeInput" 
              value={`<iframe src="${gameUrl}" width="800" height="600" frameborder="0"></iframe>`}
              readonly 
              class="copy-input"
            />
            <button class="copy-btn" onclick="copyEmbedCode()">
              <i class="fas fa-code"></i>
              Copy Embed
            </button>
          </div>
          <span class="copy-label">Embed Code for Websites</span>
        </div>
      </div>
    </div>

    <!-- 分享统计 -->
    <div class="share-stats">
      <div class="stats-item">
        <i class="fas fa-share"></i>
        <span>Shared <span id="shareCount">0</span> times</span>
      </div>
      <div class="stats-item">
        <i class="fas fa-heart"></i>
        <span>Help others discover great games!</span>
      </div>
    </div>
  </div>
</div>

<style>
  /* 分享模态框样式 */
  .share-modal-overlay {
    position: fixed !important;
    top: 0 !important;
    left: 0 !important;
    right: 0 !important;
    bottom: 0 !important;
    background: rgba(0, 0, 0, 0.6) !important;
    display: none !important; /* 默认隐藏 */
    align-items: center !important;
    justify-content: center !important;
    z-index: 10000 !important;
    opacity: 0 !important;
    visibility: hidden !important;
    transition: all 0.3s ease !important;
    backdrop-filter: blur(8px) !important;
    padding: 1rem !important;
  }

  .share-modal-overlay.active {
    display: flex !important; /* 激活时显示 */
    opacity: 1 !important;
    visibility: visible !important;
  }

  .share-modal {
    background: white;
    border-radius: 24px;
    max-width: 540px;
    width: 100%;
    max-height: 90vh;
    overflow-y: auto;
    box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25);
    transform: scale(0.9) translateY(-20px);
    transition: all 0.3s ease;
    position: relative;
  }

  .share-modal-overlay.active .share-modal {
    transform: scale(1) translateY(0);
  }

  /* 模态框头部 */
  .share-modal-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 2rem 2rem 1rem;
    border-bottom: 1px solid #F3F4F6;
  }

  .share-header-content {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .share-icon {
    width: 56px;
    height: 56px;
    border-radius: 16px;
    background: linear-gradient(135deg, #10B981 0%, #059669 100%);
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-size: 1.5rem;
  }

  .share-title {
    font-size: 1.5rem;
    font-weight: 700;
    color: #1F2937;
    margin: 0;
    font-family: 'Space Grotesk', sans-serif;
  }

  .share-subtitle {
    font-size: 0.9rem;
    color: #6B7280;
    margin: 0.25rem 0 0;
  }

  .share-close-btn {
    width: 40px;
    height: 40px;
    border: none;
    border-radius: 12px;
    background: #F3F4F6;
    color: #6B7280;
    cursor: pointer;
    transition: all 0.3s ease;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .share-close-btn:hover {
    background: #E5E7EB;
    color: #374151;
    transform: scale(1.05);
  }

  /* 游戏预览 */
  .share-game-preview {
    display: flex;
    gap: 1rem;
    padding: 1.5rem 2rem;
    background: #F9FAFB;
    margin: 0 2rem;
    border-radius: 16px;
    border: 1px solid #E5E7EB;
  }

  .share-game-image {
    width: 80px;
    height: 60px;
    border-radius: 12px;
    overflow: hidden;
    flex-shrink: 0;
  }

  .share-game-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .share-game-info {
    flex: 1;
    min-width: 0;
  }

  .share-game-title {
    font-size: 1.1rem;
    font-weight: 600;
    color: #1F2937;
    margin: 0 0 0.5rem;
    line-height: 1.3;
  }

  .share-game-description {
    font-size: 0.85rem;
    color: #6B7280;
    margin: 0 0 0.5rem;
    line-height: 1.4;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .share-game-url {
    font-size: 0.8rem;
    color: #9CA3AF;
    font-family: monospace;
  }

  /* 分享选项 */
  .share-options {
    padding: 1.5rem 2rem;
  }

  .share-section-title {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 1rem;
    font-weight: 600;
    color: #374151;
    margin: 0 0 1rem;
  }

  .share-section-title i {
    color: #6366F1;
  }

  .share-buttons-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(140px, 1fr));
    gap: 0.75rem;
  }

  .share-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    padding: 0.875rem 1rem;
    border: none;
    border-radius: 12px;
    font-weight: 600;
    font-size: 0.9rem;
    cursor: pointer;
    transition: all 0.3s ease;
    color: white;
  }

  .share-btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.15);
  }

  /* 社交媒体按钮颜色 */
  .twitter-btn { background: linear-gradient(135deg, #1DA1F2 0%, #0d8bd9 100%); }
  .facebook-btn { background: linear-gradient(135deg, #1877F2 0%, #166fe5 100%); }
  .whatsapp-btn { background: linear-gradient(135deg, #25D366 0%, #20ba5a 100%); }
  .telegram-btn { background: linear-gradient(135deg, #0088CC 0%, #006699 100%); }
  .email-btn { background: linear-gradient(135deg, #EA4335 0%, #d93025 100%); }
  .reddit-btn { background: linear-gradient(135deg, #FF4500 0%, #e03d00 100%); }

  /* 复制选项 */
  .share-copy-section {
    padding: 0 2rem 1.5rem;
    border-top: 1px solid #F3F4F6;
    margin-top: 1rem;
    padding-top: 1.5rem;
  }

  .copy-options {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .copy-item {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .copy-input-group {
    display: flex;
    gap: 0.5rem;
  }

  .copy-input {
    flex: 1;
    padding: 0.75rem 1rem;
    border: 2px solid #E5E7EB;
    border-radius: 12px;
    font-size: 0.85rem;
    background: #F9FAFB;
    color: #6B7280;
    font-family: monospace;
  }

  .copy-input:focus {
    outline: none;
    border-color: #6366F1;
    background: white;
  }

  .copy-btn {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem 1.25rem;
    border: none;
    border-radius: 12px;
    background: #6366F1;
    color: white;
    font-weight: 600;
    font-size: 0.85rem;
    cursor: pointer;
    transition: all 0.3s ease;
    white-space: nowrap;
  }

  .copy-btn:hover {
    background: #4F46E5;
    transform: translateY(-1px);
  }

  .copy-btn.copied {
