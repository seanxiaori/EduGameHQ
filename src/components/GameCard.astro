    function handleFavoriteClick(e) {
      // æ£€æŸ¥æ˜¯å¦ç‚¹å‡»çš„æ˜¯æ”¶è—æŒ‰é’®
      const favoriteBtn = e.target.closest('.favorite-heart-btn');
