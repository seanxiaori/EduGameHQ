    // è®¾ç½®å…¶ä»–äº‹ä»¶ç›‘å¬å™¨
    function setupEventListeners() {
      // ç›‘å¬localStorageå˜åŒ–ï¼ˆè·¨æ ‡ç­¾é¡µåŒæ­¥ï¼‰
      window.addEventListener('storage', (e) => {
        if (e.key === STORAGE_KEY) {
