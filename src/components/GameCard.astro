      // ç›‘å¬æ”¶è—å˜åŒ–äº‹ä»¶
      window.addEventListener('favoritesChanged', (e) => {
        console.log('ğŸ“¢ æ”¶åˆ°æ”¶è—å˜åŒ–äº‹ä»¶:', e.detail);
      });
    }
    
    // DOMå˜åŒ–ç›‘å¬å™¨
    function setupMutationObserver() {
      const observer = new MutationObserver((mutations) => {
        let hasNewCards = false;
        mutations.forEach(mutation => {
          mutation.addedNodes.forEach(node => {
            if (node.nodeType === Node.ELEMENT_NODE) {
              // æ£€æŸ¥æ˜¯å¦æ˜¯æ¸¸æˆå¡ç‰‡æˆ–åŒ…å«æ¸¸æˆå¡ç‰‡
              if (node.classList?.contains('game-card') || 
                  node.querySelector?.('.game-card')) {
                hasNewCards = true;
              }
            }
          });
        });
        
        if (hasNewCards) {
          console.log('ğŸ”„ æ£€æµ‹åˆ°æ–°çš„æ¸¸æˆå¡ç‰‡ï¼Œé‡æ–°åˆå§‹åŒ–...');
          setTimeout(initializeGameCards, 100); // å»¶è¿Ÿç¡®ä¿DOMå®Œå…¨åŠ è½½
        }
      });
      
      observer.observe(document.body, {
        childList: true,
        subtree: true
      });
    }
    
    // ä¸»åˆå§‹åŒ–å‡½æ•°
    function init() {
      console.log('ğŸš€ å¼€å§‹åˆå§‹åŒ–æ¸¸æˆå¡ç‰‡ç®¡ç†å™¨...');
      
      // è®¾ç½®äº‹ä»¶å§”æ‰˜
      setupEventDelegation();
      
      // è®¾ç½®å…¶ä»–äº‹ä»¶ç›‘å¬å™¨
      setupEventListeners();
      
      // è®¾ç½®DOMå˜åŒ–ç›‘å¬
      setupMutationObserver();
      
      // åˆå§‹åŒ–ç°æœ‰æ¸¸æˆå¡ç‰‡
      initializeGameCards();
      
      // æ ‡è®°ä¸ºå·²åˆå§‹åŒ–
      window.gameCardManagerInitialized = true;
      
      console.log('âœ… æ¸¸æˆå¡ç‰‡ç®¡ç†å™¨åˆå§‹åŒ–å®Œæˆ');
    }
    
    // æ ¹æ®DOMçŠ¶æ€å†³å®šåˆå§‹åŒ–æ—¶æœº
    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', init);
    } else {
      // DOMå·²ç»åŠ è½½å®Œæˆï¼Œå»¶è¿Ÿä¸€ç‚¹æ—¶é—´ç¡®ä¿æ‰€æœ‰ç»„ä»¶éƒ½æ¸²æŸ“å®Œæ¯•
      setTimeout(init, 100);
    }
    
  })();
</script>

