---
// src/components/ui/Logo.astro
// EduGameHQ 现代简约Logo - 游戏+学习融合设计
---
<!-- Logo图标 - 现代简约设计 -->
<div class="flex-shrink-0">
  <svg
    width="48"
    height="48"
    viewBox="0 0 48 48"
    xmlns="http://www.w3.org/2000/svg"
    aria-label="EduGameHQ Logo"
  >
    <defs>
      <linearGradient id="logo-grad" x1="0%" y1="0%" x2="100%" y2="100%">
        <stop offset="0%" style="stop-color:#6366F1"/>
        <stop offset="100%" style="stop-color:#8B5CF6"/>
      </linearGradient>
    </defs>
    <!-- 圆角方形背景 -->
    <rect x="4" y="4" width="40" height="40" rx="12" fill="url(#logo-grad)"/>
    <!-- 播放按钮三角形 -->
    <path d="M20 16 L20 32 L34 24 Z" fill="white"/>
  </svg>
</div>

<!-- 品牌名称 -->
<div class="logo-text">
  <span class="logo-main">EduGame</span><span class="logo-hq">HQ</span>
</div>

<style>
  .logo-text {
    display: flex;
    align-items: baseline;
    font-family: 'Inter', 'Space Grotesk', sans-serif;
    font-weight: 800;
    letter-spacing: -0.02em;
  }

  .logo-main {
    font-size: 24px;
    background: linear-gradient(135deg, #6366F1, #8B5CF6);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .logo-hq {
    font-size: 18px;
    color: #9CA3AF;
    font-weight: 700;
  }

  svg {
    transition: transform 0.2s ease;
  }

  svg:hover {
    transform: scale(1.05);
  }

  @media (max-width: 640px) {
    .logo-main { font-size: 20px; }
    .logo-hq { font-size: 16px; }
  }
</style>
