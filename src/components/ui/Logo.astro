---
// src/components/ui/Logo.astro
// EduGameHQ 全新Logo组件 - 游戏手柄+书本融合设计
// 设计理念：将游戏手柄与打开的书本创意结合，体现"教育游戏"核心概念
---
<!-- Logo图标 - 创意游戏手柄书本设计 -->
<div class="flex-shrink-0">
  <svg
    width="56"
    height="56"
    viewBox="0 0 56 56"
    xmlns="http://www.w3.org/2000/svg"
    aria-label="EduGameHQ Logo Icon"
  >
    <defs>
      <!-- 主渐变 - 活力橙到紫色 -->
      <linearGradient id="controller-gradient" x1="0%" y1="0%" x2="100%" y2="100%">
        <stop offset="0%" style="stop-color:#FF6B35; stop-opacity:1" />
        <stop offset="50%" style="stop-color:#F7931E; stop-opacity:1" />
        <stop offset="100%" style="stop-color:#8B5CF6; stop-opacity:1" />
      </linearGradient>
      
      <!-- 书本渐变 - 蓝色系 -->
      <linearGradient id="book-gradient" x1="0%" y1="0%" x2="0%" y2="100%">
        <stop offset="0%" style="stop-color:#60A5FA; stop-opacity:1" />
        <stop offset="100%" style="stop-color:#3B82F6; stop-opacity:1" />
      </linearGradient>
      
      <!-- 阴影效果 -->
      <filter id="shadow">
        <feDropShadow dx="0" dy="2" stdDeviation="2" flood-opacity="0.2"/>
      </filter>
    </defs>

    <!-- 游戏手柄外形 -->
    <g filter="url(#shadow)">
      <!-- 手柄主体 - 圆角矩形 -->
      <rect x="8" y="18" width="40" height="24" rx="12" ry="12" 
            fill="url(#controller-gradient)"/>
      
      <!-- 左侧握把 -->
      <ellipse cx="12" cy="36" rx="8" ry="10" 
               fill="url(#controller-gradient)"/>
      
      <!-- 右侧握把 -->
      <ellipse cx="44" cy="36" rx="8" ry="10" 
               fill="url(#controller-gradient)"/>
    </g>

    <!-- 中心：打开的书本 -->
    <g transform="translate(28, 30)">
      <!-- 左页 -->
      <path d="M-8 -6 L-8 6 L-1 4 L-1 -8 Z" 
            fill="white" opacity="0.95"/>
      <!-- 右页 -->
      <path d="M1 -8 L1 4 L8 6 L8 -6 Z" 
            fill="white" opacity="0.95"/>
      <!-- 书脊 -->
      <line x1="0" y1="-8" x2="0" y2="4" 
            stroke="white" stroke-width="1.5" opacity="0.6"/>
      
      <!-- 书本装饰线条 -->
      <line x1="-6" y1="-4" x2="-2" y2="-4" 
            stroke="url(#book-gradient)" stroke-width="1" opacity="0.8"/>
      <line x1="-6" y1="-1" x2="-2" y2="-1" 
            stroke="url(#book-gradient)" stroke-width="1" opacity="0.8"/>
      <line x1="2" y1="-4" x2="6" y2="-4" 
            stroke="url(#book-gradient)" stroke-width="1" opacity="0.8"/>
      <line x1="2" y1="-1" x2="6" y2="-1" 
            stroke="url(#book-gradient)" stroke-width="1" opacity="0.8"/>
    </g>

    <!-- 游戏按钮元素 -->
    <g>
      <!-- 左侧方向键 -->
      <circle cx="16" cy="26" r="2.5" fill="white" opacity="0.9"/>
      <circle cx="16" cy="34" r="2.5" fill="white" opacity="0.9"/>
      <circle cx="12" cy="30" r="2.5" fill="white" opacity="0.9"/>
      <circle cx="20" cy="30" r="2.5" fill="white" opacity="0.9"/>
      
      <!-- 右侧动作按钮 -->
      <circle cx="40" cy="26" r="2.5" fill="white" opacity="0.9"/>
      <circle cx="44" cy="30" r="2.5" fill="white" opacity="0.9"/>
      <circle cx="40" cy="34" r="2.5" fill="white" opacity="0.9"/>
      <circle cx="36" cy="30" r="2.5" fill="white" opacity="0.9"/>
    </g>
    
    <!-- 装饰星星 - 增加趣味性 -->
    <g opacity="0.8">
      <path d="M6 10 L7 12 L9 12 L7.5 13.5 L8 16 L6 14.5 L4 16 L4.5 13.5 L3 12 L5 12 Z" 
            fill="#FCD34D"/>
      <path d="M50 10 L51 12 L53 12 L51.5 13.5 L52 16 L50 14.5 L48 16 L48.5 13.5 L47 12 L49 12 Z" 
            fill="#FCD34D"/>
    </g>
  </svg>
</div>

<!-- 品牌名称 - 现代专业设计 -->
<div class="logo-text flex items-center gap-1">
  <span class="text-3xl font-black tracking-tight" style="background: linear-gradient(135deg, #FF6B35 0%, #F7931E 100%); -webkit-background-clip: text; -webkit-text-fill-color: transparent; background-clip: text;">Edu</span>
  <span class="text-3xl font-black tracking-tight" style="background: linear-gradient(135deg, #3B82F6 0%, #8B5CF6 100%); -webkit-background-clip: text; -webkit-text-fill-color: transparent; background-clip: text;">Game</span>
  <span class="text-2xl font-bold tracking-tight text-gray-600">HQ</span>
</div>

<style>
  /* Logo悬停效果 */
  svg {
    transition: transform 0.3s ease;
  }
  
  svg:hover {
    transform: scale(1.05);
  }
  
  /* 响应式字体 */
  @media (max-width: 640px) {
    .logo-text span:first-child,
    .logo-text span:nth-child(2) {
      font-size: 1.5rem;
    }
    .logo-text span:last-child {
      font-size: 1.25rem;
    }
  }
</style>
