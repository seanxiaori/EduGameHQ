export interface Props {
  title: string;
  description?: string;
  bodyClass?: string;
  gameData?: any; // 添加游戏数据参数用于游戏详情页
  referrer?: string; // 添加来源页面参数
}

const { title, description = "Free educational games for kids and students", bodyClass = "", gameData, referrer } = Astro.props;

// 获取当前页面路径，用于导航高亮
const currentPath = Astro.url.pathname;

// 定义页面分类和层级结构
const pageStructure = {
  categories: {
    '/math-games': { name: 'Math Games', icon: 'fas fa-calculator', color: 'math' },
    '/science-games': { name: 'Science Games', icon: 'fas fa-flask', color: 'science' },
    '/language-games': { name: 'Language Games', icon: 'fas fa-book-open', color: 'language' },
    '/puzzle-games': { name: 'Puzzle Games', icon: 'fas fa-puzzle-piece', color: 'puzzle' },
    '/sports-games': { name: 'Sports Games', icon: 'fas fa-running', color: 'sports' },
    '/art-games': { name: 'Art & Creativity', icon: 'fas fa-palette', color: 'art' }
  },
  special: {
    '/recently-played': { name: 'Recently Played', icon: 'fas fa-clock', color: 'blue' },
    '/trending': { name: 'Trending', icon: 'fas fa-fire', color: 'red' },
    '/new-games': { name: 'New Games', icon: 'fas fa-star', color: 'green' },
    '/favorites': { name: 'Favorites', icon: 'fas fa-heart', color: 'pink' },
    '/search': { name: 'Search', icon: 'fas fa-search', color: 'purple' }
  }
};

// 分类映射函数 - 将游戏的category字段映射到对应的页面路径
function getCategoryPath(category: string): string {
  const categoryMap: { [key: string]: string } = {
    'math': '/math-games',
    'science': '/science-games',
    'language': '/language-games',
    'puzzle': '/puzzle-games',
    'sports': '/sports-games',
    'art': '/art-games',
    'geography': '/geography-games',
    'coding': '/coding-games'
  };
  return categoryMap[category] || '/';
}

// 获取来源页面信息（通过referrer header或localStorage）
function getReferrerInfo() {
  // 在静态渲染模式下，不使用Astro.request.headers
  // 改为在客户端JavaScript中处理referrer逻辑
  return null;
}

// 确定当前页面类型和信息
const isHomePage = currentPath === '/';
const currentCategory = pageStructure.categories[currentPath];
const currentSpecialPage = pageStructure.special[currentPath];
const isGamePage = currentPath.startsWith('/games/');
const referrerInfo = getReferrerInfo();

// 构建简洁的面包屑导航
const breadcrumbs = [];
if (!isHomePage) {
  breadcrumbs.push({ name: 'Home', url: '/', icon: 'fas fa-home' });
  
  if (currentCategory) {
    // 分类页面面包屑：Home > Math Games
    breadcrumbs.push({ 
      name: currentCategory.name, 
      url: currentPath, 
      icon: currentCategory.icon,
      color: currentCategory.color,
      isCurrent: true 
    });
  } else if (currentSpecialPage) {
    // 特殊页面面包屑：Home > Trending
    breadcrumbs.push({ 
      name: currentSpecialPage.name, 
      url: currentPath, 
      icon: currentSpecialPage.icon,
      color: currentSpecialPage.color,
      isCurrent: true 
    });
  } else if (isGamePage && gameData) {
    // 游戏页面面包屑 - 使用默认分类路径
    const gameCategoryPath = getCategoryPath(gameData.category);
    const gameCategoryInfo = pageStructure.categories[gameCategoryPath];
    
    if (gameCategoryInfo) {
      breadcrumbs.push({ 
        name: gameCategoryInfo.name, 
        url: gameCategoryPath, 
        icon: gameCategoryInfo.icon,
        color: gameCategoryInfo.color
      });
    }
    
    // 游戏名称（简化显示）
    const gameTitle = gameData.title.length > 25 ? gameData.title.substring(0, 25) + '...' : gameData.title;
    breadcrumbs.push({ 
      name: gameTitle, 
      url: currentPath, 
      icon: 'fas fa-play',
      color: gameCategoryInfo?.color || 'default',
      isCurrent: true 
    });
  } else if (isGamePage) {
    // 游戏页面但没有游戏数据的情况
    breadcrumbs.push({ name: 'Games', url: '/', icon: 'fas fa-gamepad' });
  }
}

// 导航菜单项（简化版）
const navItems = [];
if (isHomePage) {
  // 首页显示完整导航
  navItems.push({ name: 'Home', url: '/', icon: 'fas fa-home', current: true });
  navItems.push({ name: 'Categories', type: 'dropdown', icon: 'fas fa-gamepad' });
  navItems.push({ name: 'Special', type: 'dropdown', icon: 'fas fa-star' });
} else if (currentCategory || isGamePage) {
  // 分类页面或游戏页面
  navItems.push({ name: 'Home', url: '/', icon: 'fas fa-home' });
  navItems.push({ name: 'Categories', type: 'dropdown', icon: 'fas fa-gamepad', current: !!currentCategory });
} else if (currentSpecialPage) {
  // 特殊页面
  navItems.push({ name: 'Home', url: '/', icon: 'fas fa-home' });
  navItems.push({ name: 'Special', type: 'dropdown', icon: 'fas fa-star', current: !!currentSpecialPage });
} else {
  // 其他页面
  navItems.push({ name: 'Home', url: '/', icon: 'fas fa-home' });
  navItems.push({ name: 'Categories', type: 'dropdown', icon: 'fas fa-gamepad' });
}
