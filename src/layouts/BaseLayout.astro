  <!-- JavaScript -->
  <script>
    // 下拉菜单功能
    document.addEventListener('DOMContentLoaded', function() {
      const dropdown = document.getElementById('categoriesDropdown');
      const menu = document.getElementById('categoriesMenu');
      const mobileMenuBtn = document.getElementById('mobileMenuBtn');
      const mobileMenu = document.getElementById('mobileMenu');
      
      // 桌面端下拉菜单
      if (dropdown && menu) {
        dropdown.addEventListener('click', function(e: Event) {
          e.preventDefault();
          e.stopPropagation();
          
          // 切换菜单显示状态
          menu.classList.toggle('show');
          dropdown.parentElement?.classList.toggle('show');
        });
        
        // 点击外部关闭下拉菜单
        document.addEventListener('click', function(e: Event) {
          const target = e.target as Node;
          if (!dropdown.contains(target) && !menu.contains(target)) {
            menu.classList.remove('show');
            dropdown.parentElement?.classList.remove('show');
          }
        });
        
        // 阻止菜单内部点击事件冒泡
        menu.addEventListener('click', function(e: Event) {
          e.stopPropagation();
        });
      }
      
      // 移动端菜单
      if (mobileMenuBtn && mobileMenu) {
        mobileMenuBtn.addEventListener('click', function() {
          mobileMenu.classList.toggle('show');
          mobileMenuBtn.classList.toggle('active');
        });
      }
      
      // 搜索功能
      const searchBox = document.querySelector('.search-box') as HTMLInputElement;
      const searchSuggestions = document.querySelector('#searchSuggestions') as HTMLElement;
      const searchSuggestionsList = document.querySelector('#searchSuggestionsList') as HTMLElement;
      
      console.log('Search elements found:', {
        searchBox: !!searchBox,
        searchSuggestions: !!searchSuggestions,
        searchSuggestionsList: !!searchSuggestionsList
      });
      
      if (searchBox) {
        console.log('Setting up search box event listeners...');
        
        // 简化的Enter键搜索功能
        searchBox.addEventListener('keydown', function(e) {
          console.log('Key pressed in search box:', e.key);
          if (e.key === 'Enter') {
            e.preventDefault();
            const query = this.value.trim();
            console.log('Enter pressed, search query:', query);
            if (query) {
              const searchUrl = `/search?q=${encodeURIComponent(query)}`;
              console.log('Navigating to:', searchUrl);
              window.location.href = searchUrl;
            } else {
              console.log('Empty query, not searching');
            }
          }
        });
        
        // 添加点击事件作为备用
        searchBox.addEventListener('click', function() {
          console.log('Search box clicked');
        });
        
        // 添加输入事件用于调试
        searchBox.addEventListener('input', function() {
          console.log('Search input changed:', this.value);
        });
        
        console.log('Search box event listeners set up successfully');
      } else {
        console.error('Search box not found!');
      }
      
      // 热门游戏数据（基于播放次数）
      const popularGames = [
        { title: '2048', category: 'Math', url: '/games/2048' },
        { title: 'Math Duck', category: 'Math', url: '/games/math-duck' },
        { title: 'Little Alchemy 2', category: 'Science', url: '/games/little-alchemy-2' },
        { title: 'Basketball Stars', category: 'Sports', url: '/games/basketball-stars' },
        { title: 'Learn GDScript', category: 'Coding', url: '/games/learn-gdscript' },
        { title: 'Typing Game', category: 'Language', url: '/games/typing-game' },
        { title: 'Sudoku Classic', category: 'Puzzle', url: '/games/sudoku-classic' },
        { title: 'World Map Quiz', category: 'Geography', url: '/games/world-map-quiz' }
      ];
      
      if (searchBox && searchSuggestions && searchSuggestionsList) {
        console.log('Initializing search suggestions...');
        let searchTimeout: any;
        let isSearchFocused = false;
        
        // 生成搜索推荐内容（只显示热门游戏）
        function generateSuggestions() {
          let suggestionsHTML = '';
          
          // 只添加热门游戏，不添加搜索分类
          popularGames.forEach(game => {
            suggestionsHTML += `
              <a href="${game.url}" class="search-suggestion-item game-item">
                <i class="fas fa-gamepad"></i>
                <div class="suggestion-content">
                  <div class="suggestion-main">
                    <span class="suggestion-title">${game.title}</span>
                  </div>
                  <span class="suggestion-category">${game.category}</span>
                </div>
              </a>
            `;
          });
          
          searchSuggestionsList.innerHTML = suggestionsHTML;
        }
        
        // 显示搜索建议
        function showSuggestions() {
          generateSuggestions();
          searchSuggestions.classList.add('show');
        }
        
        // 隐藏搜索建议
        function hideSuggestions() {
          setTimeout(() => {
            if (!isSearchFocused) {
              searchSuggestions.classList.remove('show');
            }
          }, 200);
        }
        
        // 搜索框获得焦点时显示推荐
        searchBox.addEventListener('focus', function() {
          console.log('Search box focused');
          isSearchFocused = true;
          showSuggestions();
        });
        
        // 搜索框失去焦点时隐藏推荐
        searchBox.addEventListener('blur', function() {
          console.log('Search box blurred');
          isSearchFocused = false;
          hideSuggestions();
        });
        
        // 搜索输入事件
        searchBox.addEventListener('input', function() {
          const query = this.value.trim();
          console.log('Search input:', query);
          
          clearTimeout(searchTimeout);
          
          if (query.length === 0) {
            showSuggestions(); // 显示默认推荐
            return;
          }
          
          // 实时搜索建议（只过滤游戏，不显示搜索分类）
          if (query.length >= 1) {
            // 过滤相关的游戏
            const filteredGames = popularGames.filter(game => 
              game.title.toLowerCase().includes(query.toLowerCase()) ||
              game.category.toLowerCase().includes(query.toLowerCase())
            );
            
            // 更新建议列表
            let suggestionsHTML = '';
            
            if (filteredGames.length > 0) {
              filteredGames.forEach(game => {
                suggestionsHTML += `
                  <a href="${game.url}" class="search-suggestion-item game-item">
                    <i class="fas fa-gamepad"></i>
                    <div class="suggestion-content">
                      <div class="suggestion-main">
                        <span class="suggestion-title">${game.title}</span>
                      </div>
                      <span class="suggestion-category">${game.category}</span>
                    </div>
                  </a>
                `;
              });
            }
            
            // 添加"搜索所有结果"选项
            if (query.length > 0) {
              if (filteredGames.length > 0) {
                suggestionsHTML += '<div class="search-suggestions-divider"></div>';
              }
              suggestionsHTML += `
                <a href="/search?q=${encodeURIComponent(query)}" class="search-suggestion-item search-all">
                  <i class="fas fa-search"></i>
                  <span class="suggestion-title">Search for "${query}"</span>
                </a>
              `;
            }
            
            searchSuggestionsList.innerHTML = suggestionsHTML;
            searchSuggestions.classList.add('show');
          }
        });
        
        // 点击页面其他地方隐藏建议
        document.addEventListener('click', function(e) {
          if (!searchBox.contains(e.target as Node) && !searchSuggestions.contains(e.target as Node)) {
            isSearchFocused = false;
            hideSuggestions();
          }
        });
        
        console.log('Search suggestions functionality initialized successfully');
      } else {
        console.error('Search suggestion elements not found:', {
          searchBox: !!searchBox,
          searchSuggestions: !!searchSuggestions,
          searchSuggestionsList: !!searchSuggestionsList
        });
      }
    });
    
    // 全局随机游戏函数
    window.playRandomGame = function() {
      const games = [
        '/games/math-duck',
        '/games/2048',
        '/games/learn-gdscript',
        '/games/typing-game',
        '/games/sudoku',
        '/games/grid-construction',
        '/sports-games',
        '/art-games',
        '/geography-games'
      ];
      const randomGame = games[Math.floor(Math.random() * games.length)];
      if (randomGame) {
        window.location.href = randomGame;
      }
    };
  </script>
