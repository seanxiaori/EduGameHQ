        '/games/color-match-amg',
        '/games/pottery-master'
      ];
      const randomGame = games[Math.floor(Math.random() * games.length)];
      console.log('随机选择的游戏:', randomGame);
      if (randomGame) {
        window.location.href = randomGame;
      }
    };
  </script>

