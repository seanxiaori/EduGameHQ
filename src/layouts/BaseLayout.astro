  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{title}</title>
  <meta name="description" content={description}>
  
  <!-- Favicon -->
  <link rel="icon" type="image/svg+xml" href="/favicon.svg">
  <link rel="icon" type="image/png" href="/favicon.png">
  
  <!-- Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=Space+Grotesk:wght@400;500;600;700&display=swap" rel="stylesheet">
  
  <!-- Font Awesome -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
  
  <!-- Meta Tags -->
  <meta name="robots" content="index, follow">
  <meta name="author" content="EduGameHQ">
  <meta name="keywords" content="educational games, learning games, kids games, math games, science games, coding games, free online games">
  
  <!-- Open Graph -->
  <meta property="og:title" content={title}>
  <meta property="og:description" content={description}>
  <meta property="og:type" content="website">
  <meta property="og:url" content={Astro.url}>
  <meta property="og:image" content="/images/og-image.jpg">
  
  <!-- Twitter Card -->
  <meta name="twitter:card" content="summary_large_image">
  <meta name="twitter:title" content={title}>
  <meta name="twitter:description" content={description}>
  <meta name="twitter:image" content="/images/og-image.jpg">
  
  <!-- Canonical URL -->
  <link rel="canonical" href={Astro.url}>
  
  <!-- Preload critical resources -->
  <link rel="preload" href="/images/logo.svg" as="image">
  
  <!-- Structured Data -->
  <script type="application/ld+json" is:inline>
  {
    "@context": "https://schema.org",
    "@type": "WebSite",
    "name": "EduGameHQ",
    "description": "Free educational games for kids aged 6-18. Learn math, science, coding, language arts and more through engaging games.",
