<?xml version="1.0" encoding="UTF-8"?>
<svg width="32" height="32" viewBox="0 0 32 32" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <!-- 大脑外轮廓渐变 - 蓝色 -->
    <linearGradient id="brainOutline" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#60A5FA;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#3B82F6;stop-opacity:1" />
    </linearGradient>
    
    <!-- 大脑内部电路 - 绿色 -->
    <linearGradient id="brainCircuit" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#4ADE80;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#22C55E;stop-opacity:1" />
    </linearGradient>
    
    <!-- 游戏手柄 - 深色 -->
    <linearGradient id="gamepadColor" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#374151;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#1F2937;stop-opacity:1" />
    </linearGradient>
  </defs>
  
  <!-- 大脑主体轮廓 -->
  <path d="M6 8 
           C3 5, 8 3, 13 4
           C18 1, 23 3, 26 7
           C28 8, 27 13, 25 16
           C26 18, 23 21, 21 20
           C18 22, 13 21, 11 18
           C8 20, 3 18, 4 13
           C1 10, 3 8, 6 8 Z" 
        fill="url(#brainOutline)" 
        stroke="#FFFFFF" 
        stroke-width="1"/>
  
  <!-- 大脑内部电路纹理（简化） -->
  <g fill="url(#brainCircuit)" opacity="0.8">
    <!-- 左半球电路 -->
    <circle cx="9" cy="11" r="1"/>
    <circle cx="12" cy="13" r="0.8"/>
    
    <!-- 右半球电路 -->
    <circle cx="20" cy="11" r="1"/>
    <circle cx="17" cy="13" r="0.8"/>
    
    <!-- 中央连接线 -->
    <path d="M13 12 L17 12" stroke="url(#brainCircuit)" stroke-width="1" fill="none"/>
  </g>
  
  <!-- 游戏手柄（简化） -->
  <g transform="translate(16, 22)">
    <!-- 手柄主体 -->
    <ellipse cx="0" cy="0" rx="7" ry="4.5" fill="url(#gamepadColor)" stroke="#FFFFFF" stroke-width="1"/>
    
    <!-- 左侧方向键 -->
    <g transform="translate(-4, 0)">
      <rect x="-0.4" y="-1.5" width="0.8" height="3" rx="0.4" fill="#FFFFFF"/>
      <rect x="-1.5" y="-0.4" width="3" height="0.8" rx="0.4" fill="#FFFFFF"/>
    </g>
    
    <!-- 右侧按钮 -->
    <circle cx="3" cy="-1" r="0.8" fill="#4ADE80"/>
    <circle cx="3" cy="1" r="0.8" fill="#4ADE80"/>
  </g>
  
  <!-- 连接线 - 表示大脑与游戏的结合 -->
  <path d="M16 17 Q16 19 16 22" stroke="#22C55E" stroke-width="1" fill="none" opacity="0.6"/>
</svg> 