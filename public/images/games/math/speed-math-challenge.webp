<svg width="400" height="300" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <linearGradient id="bg" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#ff6b6b;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#ee5a24;stop-opacity:1" />
    </linearGradient>
  </defs>
  
  <!-- Background -->
  <rect width="400" height="300" fill="url(#bg)"/>
  
  <!-- Game container -->
  <rect x="50" y="50" width="300" height="200" rx="20" fill="white" opacity="0.95"/>
  
  <!-- Title -->
  <text x="200" y="85" text-anchor="middle" font-family="Arial, sans-serif" font-size="24" font-weight="bold" fill="#333">⚡ Speed Math</text>
  
  <!-- Stats bar -->
  <rect x="70" y="95" width="80" height="50" rx="8" fill="#f8f9fa" stroke="#e9ecef" stroke-width="2"/>
  <text x="110" y="110" text-anchor="middle" font-family="Arial, sans-serif" font-size="12" fill="#666">Time</text>
  <text x="110" y="130" text-anchor="middle" font-family="Arial, sans-serif" font-size="20" font-weight="bold" fill="#e74c3c">45</text>
  
  <rect x="160" y="95" width="80" height="50" rx="8" fill="#f8f9fa" stroke="#e9ecef" stroke-width="2"/>
  <text x="200" y="110" text-anchor="middle" font-family="Arial, sans-serif" font-size="12" fill="#666">Score</text>
  <text x="200" y="130" text-anchor="middle" font-family="Arial, sans-serif" font-size="20" font-weight="bold" fill="#27ae60">320</text>
  
  <rect x="250" y="95" width="80" height="50" rx="8" fill="#f8f9fa" stroke="#e9ecef" stroke-width="2"/>
  <text x="290" y="110" text-anchor="middle" font-family="Arial, sans-serif" font-size="12" fill="#666">Streak</text>
  <text x="290" y="130" text-anchor="middle" font-family="Arial, sans-serif" font-size="20" font-weight="bold" fill="#f39c12">7</text>
  
  <!-- Progress bar -->
  <rect x="70" y="155" width="260" height="8" rx="4" fill="#f1f2f6"/>
  <rect x="70" y="155" width="195" height="8" rx="4" fill="#ff6b6b"/>
  
  <!-- Question -->
  <text x="200" y="190" text-anchor="middle" font-family="Arial, sans-serif" font-size="28" font-weight="bold" fill="#333">24 × 3 = ?</text>
  
  <!-- Input field -->
  <rect x="160" y="200" width="80" height="35" rx="8" fill="white" stroke="#ff6b6b" stroke-width="3"/>
  <text x="200" y="222" text-anchor="middle" font-family="Arial, sans-serif" font-size="20" font-weight="bold" fill="#333">72</text>
</svg> 