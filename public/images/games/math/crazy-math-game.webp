<svg width="400" height="300" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <linearGradient id="mathGradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#ff6b6b;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#ee5a24;stop-opacity:1" />
    </linearGradient>
  </defs>
  <rect width="400" height="300" fill="url(#mathGradient)"/>
  
  <!-- Math symbols background -->
  <text x="50" y="50" fill="rgba(255,255,255,0.2)" font-family="Arial" font-size="24">+</text>
  <text x="350" y="80" fill="rgba(255,255,255,0.2)" font-family="Arial" font-size="24">-</text>
  <text x="80" y="250" fill="rgba(255,255,255,0.2)" font-family="Arial" font-size="24">ร</text>
  <text x="320" y="220" fill="rgba(255,255,255,0.2)" font-family="Arial" font-size="24">รท</text>
  
  <!-- Main equation -->
  <rect x="100" y="120" width="200" height="60" fill="white" rx="10"/>
  <text x="200" y="155" text-anchor="middle" fill="#ee5a24" font-family="Arial" font-size="24" font-weight="bold">7 + 5 = ?</text>
  
  <!-- Title -->
  <text x="200" y="220" text-anchor="middle" fill="white" font-family="Arial" font-size="20" font-weight="bold">Crazy Math Game</text>
  <text x="200" y="245" text-anchor="middle" fill="#ffe8e8" font-family="Arial" font-size="14">Fast-Paced Quiz</text>
</svg> 