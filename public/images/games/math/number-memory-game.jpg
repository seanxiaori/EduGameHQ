<svg width="400" height="300" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <linearGradient id="bg" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#74b9ff;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#0984e3;stop-opacity:1" />
    </linearGradient>
  </defs>
  
  <!-- Background -->
  <rect width="400" height="300" fill="url(#bg)"/>
  
  <!-- Game container -->
  <rect x="50" y="50" width="300" height="200" rx="20" fill="white" opacity="0.95"/>
  
  <!-- Title -->
  <text x="200" y="85" text-anchor="middle" font-family="Arial, sans-serif" font-size="24" font-weight="bold" fill="#333">ðŸ§  Number Memory</text>
  
  <!-- Memory sequence display -->
  <rect x="80" y="100" width="240" height="80" rx="15" fill="#f8f9fa" stroke="#e9ecef" stroke-width="3"/>
  
  <!-- Numbers being displayed -->
  <text x="200" y="150" text-anchor="middle" font-family="Arial, sans-serif" font-size="36" font-weight="bold" fill="#e17055" letter-spacing="8px">7 4 2 9</text>
  
  <!-- Level indicator -->
  <text x="90" y="210" text-anchor="start" font-family="Arial, sans-serif" font-size="16" fill="#666">Level: 4</text>
  
  <!-- Best score -->
  <text x="310" y="210" text-anchor="end" font-family="Arial, sans-serif" font-size="16" fill="#666">Best: 8</text>
  
  <!-- Progress bar -->
  <rect x="80" y="220" width="240" height="8" rx="4" fill="#f1f2f6"/>
  <rect x="80" y="220" width="96" height="8" rx="4" fill="#00b894"/>
