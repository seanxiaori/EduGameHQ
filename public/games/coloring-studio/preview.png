<svg width="400" height="300" xmlns="http://www.w3.org/2000/svg">
  <!-- 背景渐变 -->
  <defs>
    <linearGradient id="bgGradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#FFE4E1;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#FFF8DC;stop-opacity:1" />
    </linearGradient>
  </defs>
  
  <!-- 背景 -->
  <rect width="400" height="300" fill="url(#bgGradient)"/>
  
  <!-- 画板 -->
  <rect x="50" y="50" width="300" height="200" fill="#FFFFFF" stroke="#8B4513" stroke-width="3" rx="10"/>
  
  <!-- 彩色画笔 -->
  <circle cx="80" cy="80" r="8" fill="#FF0000"/>
  <circle cx="110" cy="80" r="8" fill="#00FF00"/>
  <circle cx="140" cy="80" r="8" fill="#0000FF"/>
  <circle cx="170" cy="80" r="8" fill="#FFFF00"/>
  <circle cx="200" cy="80" r="8" fill="#FF00FF"/>
  <circle cx="230" cy="80" r="8" fill="#00FFFF"/>
  <circle cx="260" cy="80" r="8" fill="#FFA500"/>
  <circle cx="290" cy="80" r="8" fill="#800080"/>
  <circle cx="320" cy="80" r="8" fill="#FFC0CB"/>
  
  <!-- 简单的涂色图案 - 花朵 -->
  <circle cx="200" cy="150" r="30" fill="none" stroke="#000000" stroke-width="2"/>
  <circle cx="180" cy="130" r="15" fill="none" stroke="#000000" stroke-width="2"/>
  <circle cx="220" cy="130" r="15" fill="none" stroke="#000000" stroke-width="2"/>
  <circle cx="180" cy="170" r="15" fill="none" stroke="#000000" stroke-width="2"/>
  <circle cx="220" cy="170" r="15" fill="none" stroke="#000000" stroke-width="2"/>
  <circle cx="200" cy="150" r="8" fill="#FFFF00"/>
  
  <!-- 部分已涂色的花瓣 -->
  <circle cx="180" cy="130" r="15" fill="#FF69B4" opacity="0.7"/>
  <circle cx="220" cy="130" r="15" fill="#FF1493" opacity="0.7"/>
  
  <!-- 画笔工具 -->
  <rect x="320" y="200" width="4" height="30" fill="#8B4513"/>
  <polygon points="320,200 324,200 322,190" fill="#C0C0C0"/>
  
  <!-- 标题 -->
  <text x="200" y="280" text-anchor="middle" fill="#8B4513" font-family="Arial, sans-serif" font-size="18" font-weight="bold">Coloring Studio</text>
</svg>