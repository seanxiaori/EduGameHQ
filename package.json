{
  "name": "edugamehq",
  "type": "module",
  "version": "1.0.0",
  "description": "EduGameHQ - Free Educational Games Platform built with Astro 5.0",
  "scripts": {
    "dev": "set PORT=3000 && astro dev --port 3000",
    "start": "set PORT=3000 && astro dev --port 3000",
    "build": "astro check && astro build",
    "preview": "astro preview",
    "astro": "astro",
    "capture-screenshots": "node scripts/capture-game-screenshots.js",
    "improve-screenshots": "node scripts/improve-screenshots.js",
    "batch-screenshots": "node scripts/batch-screenshots.js",
    "verify-game-links": "node scripts/verify-game-links.js",
    "expand-game-library": "node scripts/expand-game-library.js",
    "generate-game-data": "node scripts/capture-screenshots.mjs --data",
    "setup-games": "npm run generate-game-data && npm run capture-screenshots",
    "crawl-games": "node scripts/run-intelligent-crawler.js",
    "crawl-game-details": "node scripts/intelligent-game-crawler.js",
    "check": "astro check",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx,.astro",
    "format": "prettier --write ."
  },
  "dependencies": {
    "@astrojs/check": "^0.9.4",
    "@astrojs/react": "^3.6.2",
    "@astrojs/sitemap": "^3.2.1",
    "@astrojs/tailwind": "^5.1.2",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "astro": "^5.0.5",
    "canvas": "^3.1.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.7.2"
  },
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.15",
    "@typescript-eslint/eslint-plugin": "^8.15.0",
    "@typescript-eslint/parser": "^8.15.0",
    "eslint": "^9.15.0",
    "eslint-plugin-astro": "^1.2.4",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.0.0",
    "prettier": "^3.3.3",
    "prettier-plugin-astro": "^0.14.1",
    "puppeteer": "^24.10.1",
    "sharp": "^0.33.5"
  },
  "engines": {
    "node": ">=18.14.1"
  },
  "keywords": [
    "educational-games",
    "kids-games",
    "learning-platform",
    "astro",
    "react",
    "tailwindcss",
    "typescript"
  ],
  "author": "EduGameHQ Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/edugamehq/edugamehq.git"
  },
  "homepage": "https://edugamehq.com"
}
